{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_MYSQL_HOST;Port=3306;Database=skilltracker_db;User=YOUR_MYSQL_USER;Password=YOUR_MYSQL_PASSWORD;SslMode=Preferred;CharSet=utf8mb4;"
  },
  
  "GeminiAI": {
    "ApiKey": "YOUR_GEMINI_API_KEY",
    "Model": "gemini-1.5-flash",
    "MaxTokens": 4096,
    "Temperature": 0.7,
    "BaseUrl": "https://generativelanguage.googleapis.com/v1beta"
  },
  
  "Jwt": {
    "SecretKey": "YOUR_SUPER_SECRET_JWT_KEY_MIN_32_CHARS_LONG_REPLACE_THIS",
    "Issuer": "SkillTracker",
    "Audience": "SkillTrackerUsers",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  
  "Session": {
    "IdleTimeoutInMinutes": 30,
    "MaxSessionsPerUser": 5
  },
  
  "Security": {
    "PasswordMinLength": 8,
    "PasswordRequireDigit": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireNonAlphanumeric": false,
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationInMinutes": 15
  },
  
  "App": {
    "Name": "SkillTracker",
    "BaseUrl": "http://localhost:5050",
    "SupportEmail": "support@skilltracker.app",
    "Version": "1.0.0"
  }
}
