<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillTracker</title>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
    
    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#2dd7cc",
                        "primary-dark": "#24b3aa",
                        "primary-hover": "#25b6ad",
                        "background-light": "#f9fafb",
                        "background-dark": "#191b1f",
                        "surface-light": "#ffffff",
                        "surface-dark": "#23262b",
                        "card-light": "#ffffff",
                        "card-dark": "#232529",
                        "text-main": "#121717",
                        "text-secondary": "#658684",
                        "text-muted": "#658684",
                        "border-light": "#e5e7eb",
                        "border-dark": "#374151",
                    },
                    fontFamily: {
                        "display": ["Manrope", "sans-serif"],
                        "body": ["Noto Sans", "sans-serif"],
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "2xl": "1rem",
                        "full": "9999px"
                    },
                    boxShadow: {
                        'soft': '0 4px 20px -2px rgba(0, 0, 0, 0.05)',
                        'glow': '0 0 15px rgba(45, 215, 204, 0.3)',
                    },
                    keyframes: {
                        shimmer: {
                            '0%': { transform: 'translateX(-100%)' },
                            '100%': { transform: 'translateX(100%)' },
                        }
                    },
                    animation: {
                        shimmer: 'shimmer 2s infinite',
                    }
                },
            },
        }
    </script>
    
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
</head>
<body class="bg-background-light dark:bg-background-dark text-text-main dark:text-gray-100 antialiased selection:bg-primary selection:text-text-main font-display">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside class="w-64 bg-surface-light dark:bg-surface-dark border-r border-gray-100 dark:border-gray-800 flex flex-col justify-between h-full shrink-0 transition-all duration-300 z-20 hidden md:flex">
            <div>
                <div class="p-6 pb-8">
                    <a asp-controller="Dashboard" asp-action="Index" class="flex items-center gap-3 cursor-pointer">
                        <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center text-text-main shadow-glow">
                            <span class="material-symbols-outlined text-xl">folder_managed</span>
                        </div>
                        <div>
                            <h1 class="text-text-main dark:text-white text-lg font-bold leading-none tracking-tight">SkillManager</h1>
                            <p class="text-text-secondary dark:text-gray-400 text-xs font-medium mt-1">Track your progress</p>
                        </div>
                    </a>
                </div>
                <nav class="flex flex-col gap-2 px-4">
                    @{
                        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                    }
                    <a asp-controller="Dashboard" asp-action="Index" 
                       class="flex items-center gap-3 px-3 py-3 rounded-lg transition-colors group @(currentAction == "Index" ? "bg-primary/10 text-primary-dark dark:text-primary font-bold" : "text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white")">
                        <span class="material-symbols-outlined @(currentAction == "Index" ? "filled" : "group-hover:scale-110 transition-transform")">dashboard</span>
                        <span class="text-sm font-medium">Dashboard</span>
                    </a>
                    <a asp-controller="Dashboard" asp-action="Skills" 
                       class="flex items-center gap-3 px-3 py-3 rounded-lg transition-colors group @(currentAction == "Skills" ? "bg-primary/10 text-primary-dark dark:text-primary font-bold" : "text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white")">
                        <span class="material-symbols-outlined @(currentAction == "Skills" ? "filled" : "group-hover:scale-110 transition-transform")">folder_open</span>
                        <span class="text-sm font-medium">My Skills</span>
                    </a>
                    <a asp-controller="Dashboard" asp-action="Sharing" 
                       class="flex items-center gap-3 px-3 py-3 rounded-lg transition-colors group @(currentAction == "Sharing" ? "bg-primary/10 text-primary-dark dark:text-primary font-bold" : "text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white")">
                        <span class="material-symbols-outlined @(currentAction == "Sharing" ? "filled" : "group-hover:scale-110 transition-transform")">share</span>
                        <span class="text-sm font-medium">Sharing Center</span>
                    </a>
                    <a asp-controller="Dashboard" asp-action="ProgressChart" 
                       class="flex items-center gap-3 px-3 py-3 rounded-lg transition-colors group @(currentAction == "ProgressChart" ? "bg-primary/10 text-primary-dark dark:text-primary font-bold" : "text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white")">
                        <span class="material-symbols-outlined @(currentAction == "ProgressChart" ? "filled" : "group-hover:scale-110 transition-transform")">analytics</span>
                        <span class="text-sm font-medium">Reports</span>
                    </a>
                </nav>
            </div>
            <div class="p-4 border-t border-gray-100 dark:border-gray-800">
                @{
                    var user = ViewBag.User as CSE325FinalProject.Models.DTOs.UserDto;
                }
                @if (user != null)
                {
                    <a asp-controller="Dashboard" asp-action="Profile" class="flex items-center gap-3 px-3 py-3 rounded-lg text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white transition-colors mb-2 bg-gray-50 dark:bg-gray-800/50">
                        @if (!string.IsNullOrEmpty(user.AvatarUrl))
                        {
                            <img src="@user.AvatarUrl" alt="@user.FullName" class="w-8 h-8 rounded-full object-cover" />
                        }
                        else
                        {
                            <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center text-primary-dark dark:text-primary text-xs font-bold">
                                @user.Initials
                            </div>
                        }
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-text-main dark:text-white truncate">@user.FullName</p>
                            <p class="text-xs text-text-secondary dark:text-gray-500 truncate">@(user.JobTitle ?? user.Email)</p>
                        </div>
                    </a>
                }
                <a asp-controller="Dashboard" asp-action="Settings" class="flex items-center gap-3 px-3 py-3 rounded-lg text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white transition-colors">
                    <span class="material-symbols-outlined">settings</span>
                    <span class="text-sm font-medium">Settings</span>
                </a>
                <a asp-controller="Account" asp-action="Logout" class="flex items-center gap-3 px-3 py-3 mt-1 rounded-lg text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 transition-colors">
                    <span class="material-symbols-outlined">logout</span>
                    <span class="text-sm font-medium">Logout</span>
                </a>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="flex-1 flex flex-col h-full overflow-hidden relative">
            <div class="flex-1 overflow-y-auto p-4 md:p-8 lg:p-12 scroll-smooth">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <!-- Theme Toggle Button (Fixed Bottom Right) -->
    <button id="theme-toggle" class="fixed bottom-4 right-4 z-50 p-3 rounded-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-all hover:scale-110 group" title="Toggle theme">
        <span class="material-symbols-outlined text-orange-500 dark:hidden group-hover:rotate-12 transition-transform">light_mode</span>
        <span class="material-symbols-outlined text-indigo-400 hidden dark:block group-hover:rotate-12 transition-transform">dark_mode</span>
    </button>
    
    <script>
        // Theme initialization from localStorage
        (function() {
            const savedTheme = localStorage.getItem('theme');
            const html = document.documentElement;
            
            if (savedTheme === 'dark') {
                html.classList.add('dark');
                html.classList.remove('light');
            } else {
                html.classList.remove('dark');
                html.classList.add('light');
            }
        })();
        
        // Theme toggle functionality
        document.getElementById('theme-toggle').addEventListener('click', function() {
            const html = document.documentElement;
            const isDark = html.classList.contains('dark');
            
            if (isDark) {
                html.classList.remove('dark');
                html.classList.add('light');
                localStorage.setItem('theme', 'light');
            } else {
                html.classList.add('dark');
                html.classList.remove('light');
                localStorage.setItem('theme', 'dark');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
