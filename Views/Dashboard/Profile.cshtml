@{
    ViewData["Title"] = "User Profile and Settings";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="px-0 md:px-4 pb-12 max-w-7xl mx-auto w-full flex flex-col gap-8">
    <!-- Page Heading -->
    <div class="flex flex-col gap-2">
        <h1 class="text-text-main dark:text-white text-3xl md:text-4xl font-black leading-tight tracking-tight">Account Settings</h1>
        <p class="text-text-secondary dark:text-gray-400 text-base md:text-lg">Manage your personal information, privacy, and application preferences.</p>
    </div>

    <!-- Content Grid (Bento Box Style) -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Profile Header Card (Full Width) -->
        <div class="lg:col-span-3 bg-card-light dark:bg-card-dark rounded-xl p-6 shadow-[0_4px_20px_-4px_rgba(0,0,0,0.05)] dark:shadow-none border border-transparent dark:border-gray-800">
            <div class="flex flex-col sm:flex-row gap-6 items-center sm:items-start justify-between">
                <div class="flex flex-col sm:flex-row gap-5 items-center sm:items-start">
                    <div class="relative group cursor-pointer">
                        <div class="bg-primary/20 rounded-full h-24 w-24 md:h-28 md:w-28 shadow-md border-4 border-white dark:border-gray-700 flex items-center justify-center text-3xl font-bold text-primary">
                            AM
                        </div>
                        <div class="absolute bottom-1 right-1 bg-primary text-text-main rounded-full p-1.5 shadow-sm border-2 border-white dark:border-gray-700">
                            <span class="material-symbols-outlined text-sm font-bold block">edit</span>
                        </div>
                    </div>
                    <div class="flex flex-col items-center sm:items-start pt-2">
                        <h2 class="text-2xl font-bold text-text-main dark:text-white">Alex Morgan</h2>
                        <p class="text-text-secondary dark:text-gray-400">alex.morgan@example.com</p>
                        <div class="mt-2 inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md bg-primary/10 dark:bg-primary/20 text-primary-dark dark:text-primary text-xs font-bold uppercase tracking-wider">
                            <span class="material-symbols-outlined text-sm">verified</span>
                            Senior Developer
                        </div>
                    </div>
                </div>
                <div class="flex gap-3 w-full sm:w-auto">
                    <button class="flex-1 sm:flex-none items-center justify-center px-4 py-2.5 border border-gray-200 dark:border-gray-700 rounded-lg text-sm font-bold text-text-main dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                        View Public Profile
                    </button>
                    <button class="flex-1 sm:flex-none items-center justify-center px-4 py-2.5 bg-primary hover:bg-teal-400 text-text-main rounded-lg text-sm font-bold shadow-sm transition-colors">
                        Change Avatar
                    </button>
                </div>
            </div>
        </div>

        <!-- Basic Info Card (2 Cols) -->
        <div class="lg:col-span-2 bg-card-light dark:bg-card-dark rounded-xl p-6 shadow-[0_4px_20px_-4px_rgba(0,0,0,0.05)] dark:shadow-none border border-transparent dark:border-gray-800 flex flex-col gap-6">
            <div class="flex items-center justify-between border-b border-gray-100 dark:border-gray-800 pb-4">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-blue-600 dark:text-blue-400">
                        <span class="material-symbols-outlined">person</span>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-text-main dark:text-white">Basic Information</h3>
                        <p class="text-sm text-text-secondary dark:text-gray-400">Update your personal details here.</p>
                    </div>
                </div>
            </div>
            <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="flex flex-col gap-2">
                    <label class="text-sm font-semibold text-text-secondary dark:text-gray-400">First Name</label>
                    <input class="w-full px-4 py-2.5 rounded-lg bg-gray-50 dark:bg-gray-800 border-none focus:ring-2 focus:ring-primary text-text-main dark:text-white placeholder-gray-400 text-sm font-medium transition-shadow" type="text" value="Alex" />
                </div>
                <div class="flex flex-col gap-2">
                    <label class="text-sm font-semibold text-text-secondary dark:text-gray-400">Last Name</label>
                    <input class="w-full px-4 py-2.5 rounded-lg bg-gray-50 dark:bg-gray-800 border-none focus:ring-2 focus:ring-primary text-text-main dark:text-white placeholder-gray-400 text-sm font-medium transition-shadow" type="text" value="Morgan" />
                </div>
                <div class="flex flex-col gap-2 md:col-span-2">
                    <label class="text-sm font-semibold text-text-secondary dark:text-gray-400">Email Address</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-text-secondary">
                            <span class="material-symbols-outlined text-[20px]">mail</span>
                        </span>
                        <input class="w-full pl-10 pr-4 py-2.5 rounded-lg bg-gray-50 dark:bg-gray-800 border-none focus:ring-2 focus:ring-primary text-text-main dark:text-white placeholder-gray-400 text-sm font-medium transition-shadow" type="email" value="alex.morgan@example.com" />
                    </div>
                </div>
                <div class="flex flex-col gap-2 md:col-span-2">
                    <label class="text-sm font-semibold text-text-secondary dark:text-gray-400">Job Title</label>
                    <input class="w-full px-4 py-2.5 rounded-lg bg-gray-50 dark:bg-gray-800 border-none focus:ring-2 focus:ring-primary text-text-main dark:text-white placeholder-gray-400 text-sm font-medium transition-shadow" type="text" value="Senior Developer" />
                </div>
            </form>
            <div class="flex justify-end pt-2">
                <button class="px-6 py-2.5 bg-primary hover:bg-teal-400 text-text-main rounded-lg text-sm font-bold shadow-sm transition-colors">
                    Save Changes
                </button>
            </div>
        </div>

        <!-- Right Column: Appearance + Stats -->
        <div class="lg:col-span-1 flex flex-col gap-6">
            <!-- Appearance Card -->
            <div class="bg-card-light dark:bg-card-dark rounded-xl p-6 shadow-[0_4px_20px_-4px_rgba(0,0,0,0.05)] dark:shadow-none border border-transparent dark:border-gray-800 h-full">
                <div class="flex items-center gap-3 mb-6 pb-4 border-b border-gray-100 dark:border-gray-800">
                    <div class="p-2 bg-purple-50 dark:bg-purple-900/20 rounded-lg text-purple-600 dark:text-purple-400">
                        <span class="material-symbols-outlined">palette</span>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-text-main dark:text-white">Appearance</h3>
                        <p class="text-sm text-text-secondary dark:text-gray-400">Customize UI theme.</p>
                    </div>
                </div>
                <div class="flex flex-col gap-4">
                    <label class="flex items-center justify-between cursor-pointer group p-3 rounded-lg border border-gray-100 dark:border-gray-800 hover:border-primary/50 dark:hover:border-primary/50 transition-colors bg-gray-50 dark:bg-gray-900/50" id="light-mode-label">
                        <div class="flex items-center gap-3">
                            <div class="bg-white dark:bg-gray-800 p-2 rounded-md shadow-sm">
                                <span class="material-symbols-outlined text-orange-500">light_mode</span>
                            </div>
                            <span class="text-sm font-bold text-text-main dark:text-white">Light Mode</span>
                        </div>
                        <div class="size-5 rounded-full border-2 border-gray-300 dark:border-gray-600 flex items-center justify-center transition-all light-radio">
                            <div class="size-2.5 rounded-full bg-primary scale-0 transition-transform"></div>
                        </div>
                    </label>
                    <label class="flex items-center justify-between cursor-pointer group p-3 rounded-lg border border-gray-100 dark:border-gray-800 hover:border-primary/50 dark:hover:border-primary/50 transition-colors bg-gray-50 dark:bg-gray-900/50" id="dark-mode-label">
                        <div class="flex items-center gap-3">
                            <div class="bg-white dark:bg-gray-800 p-2 rounded-md shadow-sm">
                                <span class="material-symbols-outlined text-indigo-400">dark_mode</span>
                            </div>
                            <span class="text-sm font-bold text-text-main dark:text-white">Dark Mode</span>
                        </div>
                        <div class="size-5 rounded-full border-2 border-gray-300 dark:border-gray-600 flex items-center justify-center transition-all dark-radio">
                            <div class="size-2.5 rounded-full bg-primary scale-0 transition-transform"></div>
                        </div>
                    </label>
                </div>
            </div>
        </div>

        <!-- Security Card (Full Width) -->
        <div class="lg:col-span-3 bg-card-light dark:bg-card-dark rounded-xl p-6 shadow-[0_4px_20px_-4px_rgba(0,0,0,0.05)] dark:shadow-none border border-transparent dark:border-gray-800">
            <div class="flex items-center justify-between border-b border-gray-100 dark:border-gray-800 pb-4 mb-6">
                <div class="flex items-center gap-3">
                    <div class="p-2 bg-red-50 dark:bg-red-900/20 rounded-lg text-red-600 dark:text-red-400">
                        <span class="material-symbols-outlined">security</span>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-text-main dark:text-white">Security & Login</h3>
                        <p class="text-sm text-text-secondary dark:text-gray-400">Manage your passwords and active sessions.</p>
                    </div>
                </div>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
                <!-- Change Password -->
                <div class="flex flex-col gap-5">
                    <h4 class="text-base font-bold text-text-main dark:text-white flex items-center gap-2">
                        <span class="material-symbols-outlined text-lg text-text-secondary">key</span>
                        Change Password
                    </h4>
                    <form class="flex flex-col gap-4">
                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-semibold text-text-secondary dark:text-gray-400">Current Password</label>
                            <input class="w-full px-4 py-2.5 rounded-lg bg-gray-50 dark:bg-gray-800 border-none focus:ring-2 focus:ring-primary text-text-main dark:text-white text-sm font-medium transition-shadow" placeholder="••••••••" type="password" />
                        </div>
                        <div class="flex flex-col gap-2">
                            <label class="text-sm font-semibold text-text-secondary dark:text-gray-400">New Password</label>
                            <input class="w-full px-4 py-2.5 rounded-lg bg-gray-50 dark:bg-gray-800 border-none focus:ring-2 focus:ring-primary text-text-main dark:text-white text-sm font-medium transition-shadow" placeholder="Enter new password" type="password" />
                            <p class="text-xs text-text-secondary dark:text-gray-500">Minimum 8 characters with numbers and symbols.</p>
                        </div>
                        <div class="pt-2">
                            <button class="px-5 py-2 rounded-lg border border-gray-200 dark:border-gray-700 text-sm font-bold text-text-main dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors" type="button">
                                Update Password
                            </button>
                        </div>
                    </form>
                </div>
                <!-- Active Sessions -->
                <div class="flex flex-col gap-5">
                    <div class="flex justify-between items-center">
                        <h4 class="text-base font-bold text-text-main dark:text-white flex items-center gap-2">
                            <span class="material-symbols-outlined text-lg text-text-secondary">devices</span>
                            Active Sessions
                        </h4>
                        <button class="text-xs font-bold text-primary hover:text-teal-400 transition-colors">Log out of all</button>
                    </div>
                    <div class="flex flex-col gap-3">
                        <!-- Current Session -->
                        <div class="flex items-center gap-4 p-4 rounded-lg bg-primary/5 border border-primary/20">
                            <div class="bg-white dark:bg-gray-800 p-2 rounded-full shadow-sm text-text-main dark:text-white">
                                <span class="material-symbols-outlined">laptop_mac</span>
                            </div>
                            <div class="flex-1">
                                <div class="flex items-center gap-2">
                                    <p class="text-sm font-bold text-text-main dark:text-white">Macbook Pro (macOS)</p>
                                    <span class="px-2 py-0.5 rounded-full bg-primary text-text-main text-[10px] font-bold uppercase">This Device</span>
                                </div>
                                <p class="text-xs text-text-secondary dark:text-gray-400">Chrome • San Francisco, US • Active Now</p>
                            </div>
                        </div>
                        <!-- Other Session -->
                        <div class="flex items-center gap-4 p-4 rounded-lg bg-gray-50 dark:bg-gray-900 border border-transparent">
                            <div class="bg-white dark:bg-gray-800 p-2 rounded-full shadow-sm text-text-secondary">
                                <span class="material-symbols-outlined">smartphone</span>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-bold text-text-main dark:text-gray-300">iPhone 13 (iOS)</p>
                                <p class="text-xs text-text-secondary dark:text-gray-500">Safari • San Francisco, US • 2 hours ago</p>
                            </div>
                            <button class="text-text-secondary hover:text-red-500 transition-colors p-2" title="Revoke session">
                                <span class="material-symbols-outlined text-lg">cancel</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Theme toggle logic for Profile page
    const lightLabel = document.getElementById('light-mode-label');
    const darkLabel = document.getElementById('dark-mode-label');
    const lightRadio = document.querySelector('.light-radio .size-2\\.5');
    const darkRadio = document.querySelector('.dark-radio .size-2\\.5');
    
    function updateRadioUI() {
        const isDark = document.documentElement.classList.contains('dark');
        if (isDark) {
            darkRadio.style.transform = 'scale(1)';
            lightRadio.style.transform = 'scale(0)';
        } else {
            lightRadio.style.transform = 'scale(1)';
            darkRadio.style.transform = 'scale(0)';
        }
    }
    
    lightLabel.addEventListener('click', () => {
        document.documentElement.classList.remove('dark');
        document.documentElement.classList.add('light');
        localStorage.setItem('theme', 'light');
        updateRadioUI();
    });
    
    darkLabel.addEventListener('click', () => {
        document.documentElement.classList.add('dark');
        document.documentElement.classList.remove('light');
        localStorage.setItem('theme', 'dark');
        updateRadioUI();
    });
    
    // Initialize UI based on current theme
    updateRadioUI();
</script>
}
