@{
    ViewData["Title"] = "Public Profile";
    Layout = null; // No layout for public view
}

<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillTracker</title>
    
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">
    
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#2dd7cc",
                        "primary-dark": "#24b3aa",
                        "text-main": "#121717",
                        "text-muted": "#658684",
                        "card-light": "#ffffff",
                        "card-dark": "#232529",
                    },
                    fontFamily: {
                        "display": ["Manrope", "sans-serif"],
                    },
                },
            },
        }
    </script>
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-text-main dark:text-gray-100 antialiased font-display min-h-screen">
    <div class="w-full max-w-6xl mx-auto py-8 md:py-12 px-4 space-y-8">
        <!-- Header Card -->
        <section class="bg-card-light dark:bg-card-dark rounded-2xl p-8 shadow-sm border border-gray-100 dark:border-gray-800 relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-primary/40 via-primary to-primary/40"></div>
            <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
                <!-- Avatar -->
                <div class="relative group">
                    <div class="size-32 md:size-40 rounded-full p-1 bg-gradient-to-tr from-primary to-blue-200">
                        <div class="w-full h-full rounded-full bg-gray-200 bg-center bg-cover border-4 border-white dark:border-card-dark flex items-center justify-center text-4xl font-bold text-gray-400">
                            JD
                        </div>
                    </div>
                </div>
                
                <!-- Info -->
                <div class="flex-1 w-full text-center md:text-left">
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary-dark font-medium text-xs mb-3">
                        <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                        Currently Learning
                    </div>
                    <h1 class="text-3xl md:text-4xl font-extrabold text-text-main dark:text-white mb-2 tracking-tight">Jane Doe</h1>
                    <p class="text-lg text-text-muted dark:text-gray-400 mb-6 font-medium">Pursuing <span class="text-text-main dark:text-white font-semibold">Advanced Python Mastery</span></p>
                    
                    <!-- Progress Bar -->
                    <div class="flex flex-col gap-2">
                        <div class="flex justify-between items-end mb-1">
                            <span class="text-sm font-bold text-text-main dark:text-white">Overall Progress</span>
                            <span class="text-2xl font-bold text-primary">78%</span>
                        </div>
                        <div class="h-3 w-full bg-gray-100 dark:bg-gray-700 rounded-full overflow-hidden">
                            <div class="h-full bg-primary rounded-full relative" style="width: 78%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Skills Section -->
        <section class="bg-card-light dark:bg-card-dark rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-gray-800">
            <h2 class="text-xl font-bold text-text-main dark:text-white mb-6">Public Skills</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <!-- Skill Card 1 -->
                <div class="p-4 bg-gray-50 dark:bg-gray-800 rounded-xl">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/20 flex items-center justify-center text-blue-500">
                            <span class="material-symbols-outlined">code</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-text-main dark:text-white">React.js</h3>
                            <span class="text-xs text-text-muted">Frontend Development</span>
                        </div>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                        <div class="bg-blue-500 h-2 rounded-full" style="width: 85%"></div>
                    </div>
                    <span class="text-xs text-text-muted mt-2 block">85% Mastery</span>
                </div>
                
                <!-- Skill Card 2 -->
                <div class="p-4 bg-gray-50 dark:bg-gray-800 rounded-xl">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/20 flex items-center justify-center text-purple-500">
                            <span class="material-symbols-outlined">palette</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-text-main dark:text-white">UI/UX Design</h3>
                            <span class="text-xs text-text-muted">Design</span>
                        </div>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                        <div class="bg-purple-500 h-2 rounded-full" style="width: 72%"></div>
                    </div>
                    <span class="text-xs text-text-muted mt-2 block">72% Mastery</span>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="text-center text-text-muted text-sm">
            <p>Powered by <span class="font-bold text-primary">SkillTracker</span></p>
            <a asp-controller="Account" asp-action="Login" class="text-primary hover:underline mt-2 inline-block">Create your own profile â†’</a>
        </footer>
    </div>
</body>
</html>
