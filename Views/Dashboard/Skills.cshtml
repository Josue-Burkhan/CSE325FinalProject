@{
    ViewData["Title"] = "All Skills";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-6xl mx-auto flex flex-col h-full">
    <!-- Top Header & Controls -->
    <header class="flex-none pb-4 z-10">
        <div class="flex flex-col gap-6">
            <!-- Title Section -->
            <div class="flex flex-col gap-2">
                <h1 class="text-4xl font-extrabold tracking-tight text-[#121717] dark:text-white">All Skills</h1>
                <p class="text-slate-500 dark:text-slate-400 text-lg">Manage and track your learning progress across all categories.</p>
            </div>
            <!-- Actions Bar -->
            <div class="flex flex-col md:flex-row gap-4 items-stretch md:items-center justify-between mt-2">
                <!-- Search & Filter Group -->
                <div class="flex flex-1 gap-3 max-w-2xl">
                    <!-- Search -->
                    <div class="relative flex-1 group">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-primary transition-colors material-symbols-outlined">search</span>
                        <input class="w-full bg-white dark:bg-[#1a1f23] border border-transparent focus:border-primary/50 ring-0 focus:ring-4 focus:ring-primary/10 rounded-xl py-3 pl-10 pr-4 text-sm shadow-sm placeholder:text-slate-400 text-[#121717] dark:text-white transition-all outline-none" placeholder="Search skills..." type="text" />
                    </div>
                    <!-- Filter Button -->
                    <button class="flex items-center gap-2 px-4 py-3 bg-white dark:bg-[#1a1f23] border border-transparent hover:border-slate-200 dark:hover:border-slate-700 rounded-xl shadow-sm text-sm font-bold text-slate-700 dark:text-slate-200 transition-all hover:shadow-md active:scale-95">
                        <span class="material-symbols-outlined text-lg">filter_list</span>
                        <span class="hidden sm:inline">Filter</span>
                    </button>
                </div>
                <!-- Add Button -->
                <a asp-controller="Dashboard" asp-action="NewSkill" class="flex items-center gap-2 px-6 py-3 bg-primary hover:bg-[#25c4ba] text-[#121717] rounded-xl font-bold text-sm shadow-lg shadow-primary/25 transition-all hover:-translate-y-0.5 active:translate-y-0">
                    <span class="material-symbols-outlined text-xl">add</span>
                    <span>Add New Skill</span>
                </a>
            </div>
        </div>
    </header>
    
    <!-- Scrollable List Area -->
    <div class="flex-1 overflow-y-auto">
        <!-- Table Header -->
        <div class="grid grid-cols-12 gap-4 px-6 py-3 text-xs font-bold uppercase tracking-wider text-slate-400 dark:text-slate-500 border-b border-slate-200 dark:border-slate-800 mb-2">
            <div class="col-span-5 md:col-span-4">Skill Name</div>
            <div class="col-span-3 hidden md:block">Category</div>
            <div class="col-span-3 md:col-span-2 text-right md:text-left">Active Goals</div>
            <div class="col-span-2 hidden md:block">Hours</div>
            <div class="col-span-4 md:col-span-1 text-right">Actions</div>
        </div>
        
        <!-- Skills List -->
        <div class="flex flex-col gap-3">
            <!-- Item 1: React -->
            <div class="group relative grid grid-cols-12 gap-4 items-center p-4 bg-white dark:bg-[#1e2429] rounded-2xl border border-transparent hover:border-primary/30 shadow-sm hover:shadow-lg hover:shadow-primary/5 transition-all duration-300">
                <a asp-controller="Dashboard" asp-action="SkillDetail" class="col-span-5 md:col-span-4 flex items-center gap-4">
                    <div class="h-12 w-12 rounded-xl bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-500 shrink-0">
                        <span class="material-symbols-outlined">code</span>
                    </div>
                    <div class="flex flex-col min-w-0">
                        <h3 class="font-bold text-[#121717] dark:text-white truncate">React.js</h3>
                        <span class="text-xs text-slate-500 md:hidden">Development</span>
                    </div>
                </a>
                <div class="col-span-3 hidden md:flex items-center">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-semibold bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300">Development</span>
                </div>
                <div class="col-span-3 md:col-span-2 flex items-center justify-end md:justify-start gap-2">
                    <div class="w-2 h-2 rounded-full bg-emerald-400"></div>
                    <span class="font-medium text-slate-700 dark:text-slate-300">3 Goals</span>
                </div>
                <div class="col-span-2 hidden md:flex flex-col justify-center">
                    <span class="font-bold text-[#121717] dark:text-white">124h 30m</span>
                    <span class="text-xs text-slate-400">Total time</span>
                </div>
                <div class="col-span-4 md:col-span-1 flex justify-end">
                    <div class="flex items-center gap-1 opacity-100 md:opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                        <button class="p-2 text-slate-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors" title="Edit">
                            <span class="material-symbols-outlined text-[20px]">edit</span>
                        </button>
                        <button class="p-2 text-slate-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors" title="Delete">
                            <span class="material-symbols-outlined text-[20px]">delete</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Item 2: UX Design -->
            <div class="group relative grid grid-cols-12 gap-4 items-center p-4 bg-white dark:bg-[#1e2429] rounded-2xl border border-transparent hover:border-primary/30 shadow-sm hover:shadow-lg hover:shadow-primary/5 transition-all duration-300">
                <a asp-controller="Dashboard" asp-action="SkillDetail" class="col-span-5 md:col-span-4 flex items-center gap-4">
                    <div class="h-12 w-12 rounded-xl bg-purple-50 dark:bg-purple-900/20 flex items-center justify-center text-purple-500 shrink-0">
                        <span class="material-symbols-outlined">design_services</span>
                    </div>
                    <div class="flex flex-col min-w-0">
                        <h3 class="font-bold text-[#121717] dark:text-white truncate">UX Design</h3>
                        <span class="text-xs text-slate-500 md:hidden">Design</span>
                    </div>
                </a>
                <div class="col-span-3 hidden md:flex items-center">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-semibold bg-purple-50 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300">Design</span>
                </div>
                <div class="col-span-3 md:col-span-2 flex items-center justify-end md:justify-start gap-2">
                    <div class="w-2 h-2 rounded-full bg-emerald-400"></div>
                    <span class="font-medium text-slate-700 dark:text-slate-300">1 Goal</span>
                </div>
                <div class="col-span-2 hidden md:flex flex-col justify-center">
                    <span class="font-bold text-[#121717] dark:text-white">45h 15m</span>
                    <span class="text-xs text-slate-400">Total time</span>
                </div>
                <div class="col-span-4 md:col-span-1 flex justify-end">
                    <div class="flex items-center gap-1 opacity-100 md:opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                        <button class="p-2 text-slate-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[20px]">edit</span>
                        </button>
                        <button class="p-2 text-slate-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[20px]">delete</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Item 3: Spanish -->
            <div class="group relative grid grid-cols-12 gap-4 items-center p-4 bg-white dark:bg-[#1e2429] rounded-2xl border border-transparent hover:border-primary/30 shadow-sm hover:shadow-lg hover:shadow-primary/5 transition-all duration-300">
                <a asp-controller="Dashboard" asp-action="SkillDetail" class="col-span-5 md:col-span-4 flex items-center gap-4">
                    <div class="h-12 w-12 rounded-xl bg-orange-50 dark:bg-orange-900/20 flex items-center justify-center text-orange-500 shrink-0">
                        <span class="material-symbols-outlined">translate</span>
                    </div>
                    <div class="flex flex-col min-w-0">
                        <h3 class="font-bold text-[#121717] dark:text-white truncate">Spanish</h3>
                        <span class="text-xs text-slate-500 md:hidden">Language</span>
                    </div>
                </a>
                <div class="col-span-3 hidden md:flex items-center">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-semibold bg-orange-50 text-orange-700 dark:bg-orange-900/30 dark:text-orange-300">Language</span>
                </div>
                <div class="col-span-3 md:col-span-2 flex items-center justify-end md:justify-start gap-2">
                    <div class="w-2 h-2 rounded-full bg-slate-300 dark:bg-slate-600"></div>
                    <span class="font-medium text-slate-500 dark:text-slate-400">0 Goals</span>
                </div>
                <div class="col-span-2 hidden md:flex flex-col justify-center">
                    <span class="font-bold text-[#121717] dark:text-white">12h 00m</span>
                    <span class="text-xs text-slate-400">Total time</span>
                </div>
                <div class="col-span-4 md:col-span-1 flex justify-end">
                    <div class="flex items-center gap-1 opacity-100 md:opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                        <button class="p-2 text-slate-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[20px]">edit</span>
                        </button>
                        <button class="p-2 text-slate-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[20px]">delete</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Item 4: Piano -->
            <div class="group relative grid grid-cols-12 gap-4 items-center p-4 bg-white dark:bg-[#1e2429] rounded-2xl border border-transparent hover:border-primary/30 shadow-sm hover:shadow-lg hover:shadow-primary/5 transition-all duration-300">
                <a asp-controller="Dashboard" asp-action="SkillDetail" class="col-span-5 md:col-span-4 flex items-center gap-4">
                    <div class="h-12 w-12 rounded-xl bg-pink-50 dark:bg-pink-900/20 flex items-center justify-center text-pink-500 shrink-0">
                        <span class="material-symbols-outlined">piano</span>
                    </div>
                    <div class="flex flex-col min-w-0">
                        <h3 class="font-bold text-[#121717] dark:text-white truncate">Piano</h3>
                        <span class="text-xs text-slate-500 md:hidden">Music</span>
                    </div>
                </a>
                <div class="col-span-3 hidden md:flex items-center">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-semibold bg-pink-50 text-pink-700 dark:bg-pink-900/30 dark:text-pink-300">Music</span>
                </div>
                <div class="col-span-3 md:col-span-2 flex items-center justify-end md:justify-start gap-2">
                    <div class="w-2 h-2 rounded-full bg-emerald-400"></div>
                    <span class="font-medium text-slate-700 dark:text-slate-300">2 Goals</span>
                </div>
                <div class="col-span-2 hidden md:flex flex-col justify-center">
                    <span class="font-bold text-[#121717] dark:text-white">68h 45m</span>
                    <span class="text-xs text-slate-400">Total time</span>
                </div>
                <div class="col-span-4 md:col-span-1 flex justify-end">
                    <div class="flex items-center gap-1 opacity-100 md:opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                        <button class="p-2 text-slate-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[20px]">edit</span>
                        </button>
                        <button class="p-2 text-slate-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[20px]">delete</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Item 5: Digital Marketing -->
            <div class="group relative grid grid-cols-12 gap-4 items-center p-4 bg-white dark:bg-[#1e2429] rounded-2xl border border-transparent hover:border-primary/30 shadow-sm hover:shadow-lg hover:shadow-primary/5 transition-all duration-300">
                <a asp-controller="Dashboard" asp-action="SkillDetail" class="col-span-5 md:col-span-4 flex items-center gap-4">
                    <div class="h-12 w-12 rounded-xl bg-teal-50 dark:bg-teal-900/20 flex items-center justify-center text-teal-600 shrink-0">
                        <span class="material-symbols-outlined">campaign</span>
                    </div>
                    <div class="flex flex-col min-w-0">
                        <h3 class="font-bold text-[#121717] dark:text-white truncate">Digital Marketing</h3>
                        <span class="text-xs text-slate-500 md:hidden">Business</span>
                    </div>
                </a>
                <div class="col-span-3 hidden md:flex items-center">
                    <span class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-semibold bg-teal-50 text-teal-700 dark:bg-teal-900/30 dark:text-teal-300">Business</span>
                </div>
                <div class="col-span-3 md:col-span-2 flex items-center justify-end md:justify-start gap-2">
                    <div class="w-2 h-2 rounded-full bg-emerald-400"></div>
                    <span class="font-medium text-slate-700 dark:text-slate-300">5 Goals</span>
                </div>
                <div class="col-span-2 hidden md:flex flex-col justify-center">
                    <span class="font-bold text-[#121717] dark:text-white">210h 10m</span>
                    <span class="text-xs text-slate-400">Total time</span>
                </div>
                <div class="col-span-4 md:col-span-1 flex justify-end">
                    <div class="flex items-center gap-1 opacity-100 md:opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                        <button class="p-2 text-slate-400 hover:text-primary hover:bg-primary/10 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[20px]">edit</span>
                        </button>
                        <button class="p-2 text-slate-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors">
                            <span class="material-symbols-outlined text-[20px]">delete</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Footer/Pagination -->
        <div class="flex items-center justify-between py-8">
            <span class="text-sm text-slate-500">Showing 5 of 24 skills</span>
            <div class="flex items-center gap-2">
                <button class="p-2 text-slate-400 hover:text-[#121717] disabled:opacity-50 transition-colors">
                    <span class="material-symbols-outlined">chevron_left</span>
                </button>
                <div class="flex gap-1">
                    <button class="h-8 w-8 rounded-lg bg-primary text-[#121717] font-bold text-sm">1</button>
                    <button class="h-8 w-8 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 text-slate-600 dark:text-slate-400 font-medium text-sm transition-colors">2</button>
                    <button class="h-8 w-8 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 text-slate-600 dark:text-slate-400 font-medium text-sm transition-colors">3</button>
                </div>
                <button class="p-2 text-slate-400 hover:text-[#121717] transition-colors">
                    <span class="material-symbols-outlined">chevron_right</span>
                </button>
            </div>
        </div>
    </div>
</div>
