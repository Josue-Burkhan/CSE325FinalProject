@{
    ViewData["Title"] = "React Development";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-7xl mx-auto space-y-8">
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-sm">
        <a asp-controller="Dashboard" asp-action="Skills" class="text-gray-500 hover:text-primary transition-colors">Skills</a>
        <span class="material-symbols-outlined text-[16px] text-gray-400">chevron_right</span>
        <span class="text-gray-900 dark:text-white font-medium">React Development</span>
    </div>

    <!-- Header & Visibility -->
    <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-6 pb-2 border-b border-transparent dark:border-gray-800">
        <div class="space-y-3 max-w-2xl">
            <h1 class="text-4xl md:text-5xl font-black tracking-tight text-gray-900 dark:text-white">React Development</h1>
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed font-light">Mastering hooks, state management, and the virtual DOM to build scalable web applications.</p>
        </div>
        <div class="flex items-center gap-4 bg-white dark:bg-surface-dark py-3 px-5 rounded-2xl shadow-sm border border-border-light dark:border-border-dark">
            <div class="flex flex-col">
                <span class="text-sm font-semibold dark:text-white">Public Visibility</span>
                <span class="text-xs text-gray-500 dark:text-gray-400">Visible to team</span>
            </div>
            <label class="relative inline-flex items-center cursor-pointer group">
                <input checked class="sr-only peer" type="checkbox" />
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-primary/50 dark:peer-focus:ring-primary/30 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-primary shadow-inner"></div>
            </label>
        </div>
    </div>

    <!-- Dashboard Grid (Bento Box Style) -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
        <!-- LEFT COLUMN (Stats & Chart) -->
        <div class="lg:col-span-4 flex flex-col gap-6">
            <!-- Stats Cards -->
            <div class="grid grid-cols-2 gap-4">
                <div class="bg-white dark:bg-surface-dark p-5 rounded-2xl border border-border-light dark:border-border-dark shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex items-start justify-between mb-2">
                        <span class="material-symbols-outlined text-primary bg-primary/10 p-2 rounded-lg text-xl">schedule</span>
                    </div>
                    <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Total Hours</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1">42h</p>
                </div>
                <div class="bg-white dark:bg-surface-dark p-5 rounded-2xl border border-border-light dark:border-border-dark shadow-sm hover:shadow-md transition-shadow">
                    <div class="flex items-start justify-between mb-2">
                        <span class="material-symbols-outlined text-primary bg-primary/10 p-2 rounded-lg text-xl">trophy</span>
                    </div>
                    <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Goals Done</p>
                    <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1">12</p>
                </div>
                <div class="col-span-2 bg-gradient-to-br from-[#2dd7cc] to-[#1faca3] p-5 rounded-2xl shadow-lg text-white relative overflow-hidden group">
                    <div class="absolute -right-4 -top-4 bg-white/20 h-24 w-24 rounded-full blur-xl group-hover:scale-110 transition-transform"></div>
                    <p class="text-white/80 text-sm font-medium relative z-10">Current Level</p>
                    <div class="flex items-baseline gap-2 mt-1 relative z-10">
                        <p class="text-3xl font-bold">Intermediate</p>
                        <span class="text-sm text-white/80 font-medium">Lvl 4</span>
                    </div>
                    <div class="w-full bg-black/20 h-1.5 mt-4 rounded-full overflow-hidden relative z-10">
                        <div class="bg-white h-full w-[65%] rounded-full"></div>
                    </div>
                    <p class="text-xs text-white/90 mt-2 relative z-10">65% to Advanced</p>
                </div>
            </div>
            
            <!-- Progress Chart Widget -->
            <div class="bg-white dark:bg-surface-dark p-6 rounded-2xl border border-border-light dark:border-border-dark shadow-sm flex-1 min-h-[250px] flex flex-col justify-between">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">Proficiency Trend</h3>
                    <select class="bg-transparent text-xs font-medium text-gray-500 border-none focus:ring-0 cursor-pointer">
                        <option>Last 30 Days</option>
                        <option>Last 6 Months</option>
                    </select>
                </div>
                <!-- Pure CSS/SVG Chart -->
                <div class="relative h-40 w-full mt-6">
                    <!-- Grid Lines -->
                    <div class="absolute inset-0 flex flex-col justify-between text-xs text-gray-300 dark:text-gray-600">
                        <div class="border-b border-dashed border-gray-100 dark:border-gray-700 w-full h-0"></div>
                        <div class="border-b border-dashed border-gray-100 dark:border-gray-700 w-full h-0"></div>
                        <div class="border-b border-dashed border-gray-100 dark:border-gray-700 w-full h-0"></div>
                        <div class="border-b border-gray-200 dark:border-gray-600 w-full h-0"></div>
                    </div>
                    <!-- The Chart Line -->
                    <svg class="absolute inset-0 w-full h-full overflow-visible" preserveAspectRatio="none" viewBox="0 0 300 100">
                        <defs>
                            <linearGradient id="gradient" x1="0%" x2="0%" y1="0%" y2="100%">
                                <stop offset="0%" style="stop-color:#2dd7cc;stop-opacity:0.3"></stop>
                                <stop offset="100%" style="stop-color:#2dd7cc;stop-opacity:0"></stop>
                            </linearGradient>
                        </defs>
                        <path d="M0,90 C40,80 60,60 100,65 C140,70 160,40 200,35 C240,30 260,10 300,5 L300,100 L0,100 Z" fill="url(#gradient)"></path>
                        <path d="M0,90 C40,80 60,60 100,65 C140,70 160,40 200,35 C240,30 260,10 300,5" fill="none" stroke="#2dd7cc" stroke-linecap="round" stroke-width="3"></path>
                        <!-- Data Points -->
                        <circle cx="100" cy="65" fill="#ffffff" r="4" stroke="#2dd7cc" stroke-width="2"></circle>
                        <circle cx="200" cy="35" fill="#ffffff" r="4" stroke="#2dd7cc" stroke-width="2"></circle>
                        <circle cx="300" cy="5" fill="#ffffff" r="4" stroke="#2dd7cc" stroke-width="2"></circle>
                    </svg>
                </div>
                <div class="flex justify-between text-xs text-gray-400 mt-2 font-mono">
                    <span>Week 1</span>
                    <span>Week 2</span>
                    <span>Week 3</span>
                    <span>Week 4</span>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN (Goals) -->
        <div class="lg:col-span-8 flex flex-col h-full">
            <div class="bg-white dark:bg-surface-dark rounded-2xl border border-border-light dark:border-border-dark shadow-sm flex flex-col h-full overflow-hidden">
                <!-- Goals Header -->
                <div class="p-6 border-b border-border-light dark:border-border-dark flex flex-wrap items-center justify-between gap-4">
                    <div class="flex items-center gap-4">
                        <h2 class="text-xl font-bold text-gray-900 dark:text-white">Current Goals</h2>
                        <div class="hidden sm:flex bg-gray-100 dark:bg-gray-800 p-1 rounded-lg">
                            <button class="px-3 py-1 text-sm font-medium rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm">All</button>
                            <button class="px-3 py-1 text-sm font-medium rounded-md text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Active</button>
                            <button class="px-3 py-1 text-sm font-medium rounded-md text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Completed</button>
                        </div>
                    </div>
                    <a asp-controller="Dashboard" asp-action="LogProgress" class="bg-primary hover:bg-primary-dark text-white px-5 py-2.5 rounded-lg text-sm font-bold flex items-center gap-2 transition-colors shadow-lg shadow-primary/20">
                        <span class="material-symbols-outlined text-xl">add_circle</span>
                        Create Goal
                    </a>
                </div>
                <!-- Goals List Container -->
                <div class="flex-1 overflow-y-auto p-2">
                    <!-- Goal Item 1: Active -->
                    <div class="group flex flex-col sm:flex-row sm:items-center gap-4 p-4 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-all border border-transparent hover:border-gray-100 dark:hover:border-gray-700">
                        <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 flex-shrink-0">
                            <span class="material-symbols-outlined">wb_sunny</span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between mb-1">
                                <h4 class="font-bold text-gray-900 dark:text-white truncate">Build a Weather App</h4>
                                <span class="text-xs font-mono text-gray-400">Due in 2 days</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <div class="flex-1 h-2 bg-gray-100 dark:bg-gray-700 rounded-full overflow-hidden">
                                    <div class="h-full bg-primary rounded-full progress-bar-fill w-[80%]"></div>
                                </div>
                                <span class="text-xs font-bold text-gray-700 dark:text-gray-300 w-8 text-right">80%</span>
                            </div>
                        </div>
                        <div class="flex-shrink-0 self-start sm:self-center">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">In Progress</span>
                        </div>
                        <div class="opacity-0 group-hover:opacity-100 transition-opacity flex gap-1">
                            <button class="p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200"><span class="material-symbols-outlined text-lg">edit</span></button>
                            <button class="p-2 text-gray-400 hover:text-red-500"><span class="material-symbols-outlined text-lg">delete</span></button>
                        </div>
                    </div>

                    <!-- Goal Item 2: Active (Low Progress) -->
                    <div class="group flex flex-col sm:flex-row sm:items-center gap-4 p-4 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-all border border-transparent hover:border-gray-100 dark:hover:border-gray-700">
                        <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 flex-shrink-0">
                            <span class="material-symbols-outlined">webhook</span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between mb-1">
                                <h4 class="font-bold text-gray-900 dark:text-white truncate">Advanced Hooks Course</h4>
                                <span class="text-xs font-mono text-gray-400">Oct 24</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <div class="flex-1 h-2 bg-gray-100 dark:bg-gray-700 rounded-full overflow-hidden">
                                    <div class="h-full bg-primary rounded-full progress-bar-fill w-[45%]"></div>
                                </div>
                                <span class="text-xs font-bold text-gray-700 dark:text-gray-300 w-8 text-right">45%</span>
                            </div>
                        </div>
                        <div class="flex-shrink-0 self-start sm:self-center">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300">Active</span>
                        </div>
                        <div class="opacity-0 group-hover:opacity-100 transition-opacity flex gap-1">
                            <button class="p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200"><span class="material-symbols-outlined text-lg">edit</span></button>
                        </div>
                    </div>

                    <!-- Goal Item 3: Completed -->
                    <div class="group flex flex-col sm:flex-row sm:items-center gap-4 p-4 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-all border border-transparent hover:border-gray-100 dark:hover:border-gray-700 opacity-60 hover:opacity-100">
                        <div class="flex items-center justify-center h-12 w-12 rounded-xl bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 flex-shrink-0">
                            <span class="material-symbols-outlined">check_circle</span>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between mb-1">
                                <h4 class="font-bold text-gray-900 dark:text-white truncate line-through decoration-gray-400">Redux Integration</h4>
                                <span class="text-xs font-mono text-gray-400">Completed</span>
                            </div>
                            <div class="flex items-center gap-3">
                                <div class="flex-1 h-2 bg-gray-100 dark:bg-gray-700 rounded-full overflow-hidden">
                                    <div class="h-full bg-green-500 rounded-full progress-bar-fill w-[100%]"></div>
                                </div>
                                <span class="text-xs font-bold text-gray-700 dark:text-gray-300 w-8 text-right">100%</span>
                            </div>
                        </div>
                        <div class="flex-shrink-0 self-start sm:self-center">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-300">Done</span>
                        </div>
                        <div class="opacity-0 group-hover:opacity-100 transition-opacity flex gap-1">
                            <button class="p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200"><span class="material-symbols-outlined text-lg">undo</span></button>
                        </div>
                    </div>

                    <!-- Goal Item 4: Empty / Placeholder -->
                    <div class="p-4 rounded-xl border-2 border-dashed border-gray-200 dark:border-gray-700 flex flex-col items-center justify-center text-center py-8 text-gray-400 hover:border-primary hover:text-primary transition-colors cursor-pointer group">
                        <div class="bg-gray-50 dark:bg-gray-800 p-3 rounded-full mb-2 group-hover:bg-primary/10 transition-colors">
                            <span class="material-symbols-outlined text-2xl">add</span>
                        </div>
                        <p class="text-sm font-medium">Add another milestone</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
