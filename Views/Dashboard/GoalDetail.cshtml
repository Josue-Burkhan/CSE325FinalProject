@{
    ViewData["Title"] = "Goal Progress";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-6xl mx-auto space-y-8">
    <!-- Breadcrumbs & Heading -->
    <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
        <div class="space-y-2">
            <nav class="flex items-center text-sm font-medium text-slate-500 dark:text-slate-400">
                <a asp-controller="Dashboard" asp-action="Index" class="hover:text-slate-900 dark:hover:text-slate-200 transition-colors">Dashboard</a>
                <span class="mx-2 text-slate-300">/</span>
                <a asp-controller="Dashboard" asp-action="Skills" class="hover:text-slate-900 dark:hover:text-slate-200 transition-colors">Goals</a>
                <span class="mx-2 text-slate-300">/</span>
                <span class="text-primary font-semibold">Mastering Hooks</span>
            </nav>
            <div class="flex items-baseline gap-4">
                <h1 class="text-3xl md:text-4xl font-black text-slate-900 dark:text-white tracking-tight">Mastering Hooks</h1>
                <span class="px-2.5 py-0.5 rounded-full bg-primary/10 text-primary-dark dark:text-primary text-xs font-bold uppercase tracking-wide">In Progress</span>
            </div>
            <p class="text-slate-500 dark:text-slate-400 max-w-xl">Deep dive into React 18 hooks, performance optimization, and custom hook patterns.</p>
        </div>
        <button class="flex items-center gap-2 px-4 py-2 text-sm font-semibold text-slate-700 dark:text-slate-200 bg-white dark:bg-white/5 border border-slate-200 dark:border-white/10 rounded-lg shadow-sm hover:bg-slate-50 dark:hover:bg-white/10 transition-all">
            <span class="material-symbols-outlined text-[20px]">edit</span>
            Edit Goal
        </button>
    </div>

    <!-- Bento Box Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Progress Gauge Card -->
        <div class="bg-surface-light dark:bg-surface-dark p-6 rounded-2xl shadow-[0_4px_20px_-4px_rgba(0,0,0,0.05)] dark:shadow-none border border-border-light dark:border-border-dark flex flex-col items-center justify-center relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-4 opacity-5 group-hover:opacity-10 transition-opacity">
                <span class="material-symbols-outlined text-9xl">data_usage</span>
            </div>
            <h3 class="text-slate-500 dark:text-slate-400 font-medium text-sm absolute top-6 left-6">Goal Completion</h3>
            <div class="relative size-48 mt-4">
                <svg class="size-full -rotate-90 transform" viewBox="0 0 100 100">
                    <circle class="text-slate-100 dark:text-slate-800" cx="50" cy="50" fill="transparent" r="40" stroke="currentColor" stroke-width="8"></circle>
                    <circle class="text-primary progress-circle" cx="50" cy="50" fill="transparent" r="40" stroke="currentColor" stroke-dasharray="251" stroke-dashoffset="88" stroke-linecap="round" stroke-width="8"></circle>
                </svg>
                <div class="absolute top-0 left-0 size-full flex flex-col items-center justify-center">
                    <span class="text-4xl font-black text-slate-900 dark:text-white tracking-tighter">65%</span>
                    <span class="text-xs text-slate-400 font-medium uppercase mt-1">Achieved</span>
                </div>
            </div>
            <div class="flex items-center gap-2 mt-2">
                <span class="text-lg font-bold text-slate-900 dark:text-white">65</span>
                <span class="text-slate-400">/</span>
                <span class="text-slate-500 dark:text-slate-400">100 hrs target</span>
            </div>
        </div>

        <!-- History Chart Card -->
        <div class="lg:col-span-2 bg-surface-light dark:bg-surface-dark p-6 rounded-2xl shadow-[0_4px_20px_-4px_rgba(0,0,0,0.05)] dark:shadow-none border border-border-light dark:border-border-dark flex flex-col">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white">Activity History</h3>
                    <p class="text-sm text-slate-500 dark:text-slate-400">Weekly breakdown of logged hours</p>
                </div>
                <select class="bg-slate-50 dark:bg-slate-800 border-none text-xs font-semibold rounded-lg px-3 py-1.5 text-slate-600 dark:text-slate-300 focus:ring-1 focus:ring-primary cursor-pointer">
                    <option>Last 8 Weeks</option>
                    <option>Last Quarter</option>
                    <option>This Year</option>
                </select>
            </div>
            <div class="flex-1 flex items-end justify-between gap-2 min-h-[180px] w-full pt-4 relative">
                <!-- Grid lines background -->
                <div class="absolute inset-0 flex flex-col justify-between pointer-events-none pb-8">
                    <div class="w-full h-px bg-slate-100 dark:bg-slate-800 border-t border-dashed border-slate-200 dark:border-slate-700"></div>
                    <div class="w-full h-px bg-slate-100 dark:bg-slate-800 border-t border-dashed border-slate-200 dark:border-slate-700"></div>
                    <div class="w-full h-px bg-slate-100 dark:bg-slate-800 border-t border-dashed border-slate-200 dark:border-slate-700"></div>
                    <div class="w-full h-px bg-slate-100 dark:bg-slate-800 border-t border-dashed border-slate-200 dark:border-slate-700"></div>
                </div>
                <!-- Bars -->
                <div class="flex flex-col items-center gap-2 group w-full z-10">
                    <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-t-sm h-[140px] flex items-end relative overflow-hidden">
                        <div class="bar-animate w-full bg-slate-300 dark:bg-slate-700 group-hover:bg-primary/50 transition-colors" style="height: 25%"></div>
                    </div>
                    <span class="text-xs text-slate-400 font-medium">W38</span>
                </div>
                <div class="flex flex-col items-center gap-2 group w-full z-10">
                    <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-t-sm h-[140px] flex items-end relative overflow-hidden">
                        <div class="bar-animate w-full bg-slate-300 dark:bg-slate-700 group-hover:bg-primary/50 transition-colors" style="height: 45%"></div>
                    </div>
                    <span class="text-xs text-slate-400 font-medium">W39</span>
                </div>
                <div class="flex flex-col items-center gap-2 group w-full z-10">
                    <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-t-sm h-[140px] flex items-end relative overflow-hidden">
                        <div class="bar-animate w-full bg-primary/40 group-hover:bg-primary transition-colors" style="height: 65%"></div>
                    </div>
                    <span class="text-xs text-slate-400 font-medium">W40</span>
                </div>
                <div class="flex flex-col items-center gap-2 group w-full z-10">
                    <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-t-sm h-[140px] flex items-end relative overflow-hidden">
                        <div class="bar-animate w-full bg-primary group-hover:bg-primary-dark transition-colors" style="height: 80%"></div>
                    </div>
                    <span class="text-xs text-slate-400 font-medium">W41</span>
                </div>
                <div class="flex flex-col items-center gap-2 group w-full z-10">
                    <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-t-sm h-[140px] flex items-end relative overflow-hidden">
                        <div class="bar-animate w-full bg-primary/80 group-hover:bg-primary transition-colors" style="height: 55%"></div>
                    </div>
                    <span class="text-xs text-slate-400 font-medium">W42</span>
                </div>
                <div class="flex flex-col items-center gap-2 group w-full z-10">
                    <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-t-sm h-[140px] flex items-end relative overflow-hidden">
                        <div class="bar-animate w-full bg-slate-300 dark:bg-slate-700 group-hover:bg-primary/50 transition-colors" style="height: 30%"></div>
                    </div>
                    <span class="text-xs text-slate-400 font-medium">W43</span>
                </div>
                <div class="flex flex-col items-center gap-2 group w-full z-10">
                    <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-t-sm h-[140px] flex items-end relative overflow-hidden">
                        <div class="w-full bg-slate-300 dark:bg-slate-700" style="height: 10%"></div>
                    </div>
                    <span class="text-xs text-slate-400 font-medium">W44</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Logs Table Section -->
    <div class="space-y-4">
        <!-- Action Bar -->
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
            <h2 class="text-xl font-bold text-slate-900 dark:text-white">Progress Logs</h2>
            <div class="flex flex-col sm:flex-row gap-3">
                <div class="relative">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-[20px]">search</span>
                    <input class="pl-10 pr-4 py-2 w-full sm:w-64 bg-white dark:bg-surface-dark border border-slate-200 dark:border-border-dark rounded-lg text-sm text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all placeholder:text-slate-400" placeholder="Search logs..." type="text" />
                </div>
                <div class="flex gap-3">
                    <button class="flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-surface-dark border border-slate-200 dark:border-border-dark rounded-lg text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-white/5 transition-all">
                        <span class="material-symbols-outlined text-[20px]">calendar_today</span>
                        <span class="hidden sm:inline">Filter</span>
                    </button>
                    <a asp-controller="Dashboard" asp-action="LogProgress" class="flex items-center justify-center gap-2 px-4 py-2 bg-primary text-black rounded-lg text-sm font-bold shadow-md shadow-primary/20 hover:bg-primary-dark transition-all transform active:scale-95">
                        <span class="material-symbols-outlined text-[20px]">add</span>
                        Add Log
                    </a>
                </div>
            </div>
        </div>

        <!-- Table Card -->
        <div class="bg-surface-light dark:bg-surface-dark rounded-2xl shadow-[0_4px_20px_-4px_rgba(0,0,0,0.05)] dark:shadow-none border border-border-light dark:border-border-dark overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-50 dark:bg-black/20 border-b border-border-light dark:border-border-dark">
                            <th class="py-4 px-6 text-xs font-bold text-slate-500 uppercase tracking-wider w-32">Date</th>
                            <th class="py-4 px-6 text-xs font-bold text-slate-500 uppercase tracking-wider">Description</th>
                            <th class="py-4 px-6 text-xs font-bold text-slate-500 uppercase tracking-wider w-32 text-right">Value</th>
                            <th class="py-4 px-6 text-xs font-bold text-slate-500 uppercase tracking-wider w-24 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border-light dark:divide-border-dark">
                        <tr class="group hover:bg-slate-50 dark:hover:bg-white/5 transition-colors">
                            <td class="py-4 px-6 text-sm text-slate-600 dark:text-slate-400 font-mono">Oct 24, 2023</td>
                            <td class="py-4 px-6">
                                <p class="text-sm font-medium text-slate-900 dark:text-slate-200">Completed 'useContext' tutorial</p>
                                <p class="text-xs text-slate-500 truncate max-w-[200px] sm:max-w-md">Watched 3 videos and implemented a theme switcher.</p>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400">+2.5 hrs</span>
                            </td>
                            <td class="py-4 px-6 text-center">
                                <div class="flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button class="text-slate-400 hover:text-primary transition-colors"><span class="material-symbols-outlined text-[18px]">edit</span></button>
                                    <button class="text-slate-400 hover:text-red-500 transition-colors"><span class="material-symbols-outlined text-[18px]">delete</span></button>
                                </div>
                            </td>
                        </tr>
                        <tr class="group hover:bg-slate-50 dark:hover:bg-white/5 transition-colors">
                            <td class="py-4 px-6 text-sm text-slate-600 dark:text-slate-400 font-mono">Oct 22, 2023</td>
                            <td class="py-4 px-6">
                                <p class="text-sm font-medium text-slate-900 dark:text-slate-200">Refactoring Legacy Code</p>
                                <p class="text-xs text-slate-500 truncate max-w-[200px] sm:max-w-md">Migrated class components to functional components using hooks.</p>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400">+4.0 hrs</span>
                            </td>
                            <td class="py-4 px-6 text-center">
                                <div class="flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button class="text-slate-400 hover:text-primary transition-colors"><span class="material-symbols-outlined text-[18px]">edit</span></button>
                                    <button class="text-slate-400 hover:text-red-500 transition-colors"><span class="material-symbols-outlined text-[18px]">delete</span></button>
                                </div>
                            </td>
                        </tr>
                        <tr class="group hover:bg-slate-50 dark:hover:bg-white/5 transition-colors">
                            <td class="py-4 px-6 text-sm text-slate-600 dark:text-slate-400 font-mono">Oct 20, 2023</td>
                            <td class="py-4 px-6">
                                <p class="text-sm font-medium text-slate-900 dark:text-slate-200">Custom Hooks Research</p>
                                <p class="text-xs text-slate-500 truncate max-w-[200px] sm:max-w-md">Reading documentation on composition and reusability.</p>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400">+1.5 hrs</span>
                            </td>
                            <td class="py-4 px-6 text-center">
                                <div class="flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button class="text-slate-400 hover:text-primary transition-colors"><span class="material-symbols-outlined text-[18px]">edit</span></button>
                                    <button class="text-slate-400 hover:text-red-500 transition-colors"><span class="material-symbols-outlined text-[18px]">delete</span></button>
                                </div>
                            </td>
                        </tr>
                        <tr class="group hover:bg-slate-50 dark:hover:bg-white/5 transition-colors">
                            <td class="py-4 px-6 text-sm text-slate-600 dark:text-slate-400 font-mono">Oct 18, 2023</td>
                            <td class="py-4 px-6">
                                <p class="text-sm font-medium text-slate-900 dark:text-slate-200">Project Setup</p>
                                <p class="text-xs text-slate-500 truncate max-w-[200px] sm:max-w-md">Initial repo configuration and environment setup.</p>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400">+2.0 hrs</span>
                            </td>
                            <td class="py-4 px-6 text-center">
                                <div class="flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button class="text-slate-400 hover:text-primary transition-colors"><span class="material-symbols-outlined text-[18px]">edit</span></button>
                                    <button class="text-slate-400 hover:text-red-500 transition-colors"><span class="material-symbols-outlined text-[18px]">delete</span></button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-border-light dark:border-border-dark flex items-center justify-between">
                <span class="text-xs text-slate-500">Showing 1-4 of 24 logs</span>
                <div class="flex gap-2">
                    <button class="p-1 rounded hover:bg-slate-100 dark:hover:bg-white/10 text-slate-400 disabled:opacity-50"><span class="material-symbols-outlined">chevron_left</span></button>
                    <button class="p-1 rounded hover:bg-slate-100 dark:hover:bg-white/10 text-slate-900 dark:text-slate-200"><span class="material-symbols-outlined">chevron_right</span></button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<style>
    .progress-circle {
        animation: fill-progress 1.5s ease-out forwards;
    }
    @@keyframes fill-progress {
        from { stroke-dashoffset: 251; }
        to { stroke-dashoffset: 88; }
    }
    .bar-animate {
        animation: grow-up 1s ease-out forwards;
    }
    @@keyframes grow-up {
        from { height: 0; }
    }
</style>
}
