@page "/skills/edit/{Id:int}"
@attribute [Authorize]
@inject ISkillService SkillService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Edit Skill - A Better Me</PageTitle>

<div class="max-w-3xl mx-auto">
    <!-- Header -->
    <header class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-text-main dark:text-white">Edit Skill</h1>
            <p class="text-text-secondary dark:text-gray-400 mt-2">Update your skill details and preferences</p>
        </div>
        <a href="/skills/@Id" class="px-4 py-2 text-text-secondary hover:text-text-main dark:text-gray-400 dark:hover:text-white font-medium transition-colors">
            Cancel
        </a>
    </header>
    
    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary"></div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg text-red-600 dark:text-red-400">
            @errorMessage
        </div>
        <div class="flex justify-center">
             <a href="/skills" class="px-6 py-3 bg-primary hover:bg-primary-dark text-text-main font-bold rounded-lg transition-colors">
                Back to Skills
            </a>
        </div>
    }
    else
    {
        <div class="bg-surface-light dark:bg-surface-dark rounded-2xl border border-gray-100 dark:border-gray-800 p-6 md:p-8">
            <EditForm Model="@skillModel" OnValidSubmit="UpdateSkill">
                <DataAnnotationsValidator />
                
                <div class="space-y-6">
                    <!-- Name -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Skill Name <span class="text-red-500">*</span></label>
                        <InputText @bind-Value="skillModel.Name" 
                               class="w-full h-12 px-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white focus:ring-2 focus:ring-primary/50" 
                               placeholder="e.g., Learn Python" />
                        <ValidationMessage For="@(() => skillModel.Name)" class="text-red-500 text-sm mt-1" />
                    </div>
                    
                    <!-- Category -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Category</label>
                        <InputSelect @bind-Value="skillModel.CategoryId" 
                                class="w-full h-12 px-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white">
                            <option value="">Select a category</option>
                            @foreach (var cat in categories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </InputSelect>
                    </div>
                    
                    <!-- Big Goal / Description -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Main Goal / Description</label>
                        <InputTextArea @bind-Value="skillModel.Description" rows="3"
                                  class="w-full px-4 py-3 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white resize-none focus:ring-2 focus:ring-primary/50" />
                    </div>
                    
                     <!-- Target Date -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Target Completion Date</label>
                        <InputDate @bind-Value="skillModel.TargetDate" 
                               class="w-full h-12 px-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white" />
                    </div>
                    
                    <!-- Target Hours -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Target Total Hours</label>
                         <InputNumber @bind-Value="skillModel.TargetHours" 
                               class="w-full h-12 px-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white" />
                         <p class="text-xs text-text-secondary dark:text-gray-500 mt-1">Optional total hours to master this skill.</p>
                    </div>
                    
                    <!-- Visibility -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Visibility</label>
                        <div class="flex gap-4">
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input type="radio" name="visibility" value="private" @onchange="@(() => skillModel.Visibility = "private")" checked="@(skillModel.Visibility == "private")" class="w-4 h-4 text-primary" />
                                <span class="text-text-main dark:text-white">Private</span>
                            </label>
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input type="radio" name="visibility" value="public" @onchange="@(() => skillModel.Visibility = "public")" checked="@(skillModel.Visibility == "public")" class="w-4 h-4 text-primary" />
                                <span class="text-text-main dark:text-white">Public</span>
                            </label>
                        </div>
                    </div>
                    
                     <!-- Status -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Status</label>
                        <InputSelect @bind-Value="skillModel.Status" 
                                class="w-full h-12 px-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white">
                            <option value="not_started">Not Started</option>
                            <option value="in_progress">In Progress</option>
                            <option value="paused">Paused</option>
                            <option value="completed">Completed</option>
                        </InputSelect>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-6 border-t border-gray-100 dark:border-gray-800 flex justify-end">
                        <button type="submit" disabled="@isSubmitting" 
                                class="flex items-center gap-2 px-8 h-11 bg-primary hover:bg-primary-dark text-text-main font-bold rounded-lg transition-all disabled:opacity-50">
                            @if (isSubmitting)
                            {
                                <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-text-main"></div>
                                <span>Updating...</span>
                            }
                            else
                            {
                                <span class="material-symbols-outlined">save</span>
                                <span>Save Changes</span>
                            }
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    
    private EditSkillModel skillModel = new();
    private List<CategoryDto> categories = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private int userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userIdClaim = authState.User.FindFirst("userId")?.Value;
        
        if (int.TryParse(userIdClaim, out int uid))
        {
            userId = uid;
            categories = await SkillService.GetCategoriesAsync();
            await LoadSkill();
        }
        else
        {
            errorMessage = "User not authenticated.";
            isLoading = false;
        }
    }

    private async Task LoadSkill()
    {
        try 
        {
            var skill = await SkillService.GetSkillByIdAsync(Id, userId);
            if (skill == null)
            {
                errorMessage = "Skill not found or access denied.";
            }
            else
            {
                skillModel = new EditSkillModel
                {
                    Name = skill.Name,
                    Description = skill.Description ?? "",
                    BigGoal = skill.BigGoal,
                    CategoryId = skill.Category?.Id,
                    TargetDate = skill.TargetDate,
                    TargetHours = skill.TargetHours,
                    Visibility = skill.Visibility,
                    Status = skill.Status,
                    MockDate = DateTime.Today // Just for default usage if needed logic uses it
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading skill: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateSkill()
    {
        if (isSubmitting) return;
        isSubmitting = true;
        
        try
        {
            var request = new UpdateSkillRequest
            {
                Name = skillModel.Name,
                Description = skillModel.Description,
                BigGoal = skillModel.BigGoal,
                CategoryId = skillModel.CategoryId,
                TargetDate = skillModel.TargetDate,
                TargetHours = skillModel.TargetHours,
                Visibility = skillModel.Visibility,
                Status = skillModel.Status
            };

            var result = await SkillService.UpdateSkillAsync(Id, userId, request);
            
            if (result != null)
            {
                Navigation.NavigateTo($"/skills/{Id}");
            }
            else
            {
                errorMessage = "Failed to update skill.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating skill: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class EditSkillModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = "";
        
        public string? Description { get; set; }
        public string? BigGoal { get; set; }
        public int? CategoryId { get; set; }
        public DateTime? TargetDate { get; set; }
        public decimal? TargetHours { get; set; }
        public string Visibility { get; set; } = "private";
        public string Status { get; set; } = "in_progress";
        
        public DateTime MockDate { get; set; }
    }
}
