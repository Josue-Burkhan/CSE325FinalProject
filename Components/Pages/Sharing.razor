@page "/sharing"
@attribute [Authorize]
@inject AuthenticationStateProvider AuthStateProvider
@inject ISkillService SkillService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Sharing Center - SkillTracker</PageTitle>

<div class="max-w-4xl mx-auto space-y-8">
    <header>
        <h1 class="text-3xl font-bold text-text-main dark:text-white">Sharing Center</h1>
        <p class="text-text-secondary dark:text-gray-400 mt-1">Manage your public skills and reach</p>
    </header>
    
    <!-- Profile Info (Always Public) -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-2xl p-6 md:p-8 border border-gray-100 dark:border-gray-800">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
            <div>
                <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined text-green-500">public</span>
                    <h2 class="text-xl font-bold text-text-main dark:text-white">Your Profile is Public</h2>
                </div>
                <p class="text-text-secondary dark:text-gray-400 mt-2 max-w-lg">
                    Your profile URL is visible to anyone with the link. You can control which specific skills are shown below.
                </p>
            </div>
            
            <div class="flex items-center gap-2 bg-background-light dark:bg-background-dark p-2 rounded-lg border border-gray-200 dark:border-gray-700 w-full md:w-auto">
                <input value="@publicUrl" readonly class="flex-1 md:w-64 bg-transparent border-none text-sm text-text-main dark:text-white focus:ring-0 px-2" />
                <button @onclick="CopyUrl" class="p-2 hover:bg-white dark:hover:bg-gray-700 rounded-md text-primary transition-colors" title="Copy URL">
                    <span class="material-symbols-outlined text-[20px]">content_copy</span>
                </button>
                <a href="@publicUrl" target="_blank" class="p-2 hover:bg-white dark:hover:bg-gray-700 rounded-md text-text-secondary dark:text-gray-400 transition-colors" title="Open Public Profile">
                    <span class="material-symbols-outlined text-[20px]">open_in_new</span>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Skills Visibility Config -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-2xl border border-gray-100 dark:border-gray-800 overflow-hidden">
        <div class="p-6 border-b border-gray-100 dark:border-gray-800">
            <h2 class="text-xl font-bold text-text-main dark:text-white">Public Skills</h2>
            <p class="text-sm text-text-secondary dark:text-gray-400 mt-1">Toggle which skills are visible on your public profile</p>
        </div>
        
        @if (isLoading)
        {
            <div class="flex justify-center p-12">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary"></div>
            </div>
        }
        else if (skills.Any())
        {
            <div class="divide-y divide-gray-100 dark:divide-gray-800">
                @foreach (var skill in skills)
                {
                    <div class="p-4 md:p-6 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary shrink-0">
                                <span class="material-symbols-outlined">@(skill.Icon ?? "school")</span>
                            </div>
                            <div>
                                <h3 class="font-bold text-text-main dark:text-white">@skill.Name</h3>
                                <div class="flex items-center gap-4 mt-1 text-sm text-text-secondary dark:text-gray-400">
                                    <span>@skill.Category?.Name</span>
                                    <span class="flex items-center gap-1">
                                        <span class="material-symbols-outlined text-[16px]">visibility</span>
                                        @skill.ViewCount views
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="flex items-center gap-3">
                            <span class="text-sm font-medium @(skill.Visibility == "public" ? "text-green-600 dark:text-green-400" : "text-gray-400")">
                                @(skill.Visibility == "public" ? "Public" : "Private")
                            </span>
                            <button @onclick="() => ToggleSkillVisibility(skill)" 
                                    class="w-12 h-6 rounded-full relative transition-colors @(skill.Visibility == "public" ? "bg-green-500" : "bg-gray-200 dark:bg-gray-700")">
                                <span class="absolute top-1 left-1 w-4 h-4 rounded-full bg-white shadow-sm transition-transform duration-200 @(skill.Visibility == "public" ? "translate-x-6" : "translate-x-0")"></span>
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="p-8 text-center text-text-secondary dark:text-gray-400">
                <p>No skills found. Create a skill to start sharing!</p>
            </div>
        }
    </div>
</div>

@code {
    private List<SkillDto> skills = new();
    private bool isLoading = true;
    private string publicUrl = "";
    private int userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userIdClaim = authState.User.FindFirst("userId")?.Value;
        
        if (int.TryParse(userIdClaim, out userId))
        {
            publicUrl = $"{Navigation.BaseUri}u/{userId}";
            await LoadSkills();
        }
    }

    private async Task LoadSkills()
    {
        skills = await SkillService.GetUserSkillsAsync(userId);
        isLoading = false;
    }

    private async Task CopyUrl()
    {
        await JS.InvokeVoidAsync("navigator.clipboard.writeText", publicUrl);
        // Could add toast notification here
    }

    private async Task ToggleSkillVisibility(SkillDto skill)
    {
        var newVisibility = skill.Visibility == "public" ? "private" : "public";
        // Optimistic UI update
        skill.Visibility = newVisibility;
        
        var request = new UpdateSkillRequest { Visibility = newVisibility };
        var result = await SkillService.UpdateSkillAsync(skill.Id, userId, request);
        
        if (result == null)
        {
            // Revert on failure
            skill.Visibility = skill.Visibility == "public" ? "private" : "public";
        }
    }
}
