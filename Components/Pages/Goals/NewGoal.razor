@page "/skills/{SkillId:int}/goals/new"
@attribute [Authorize]
@inject IGoalService GoalService
@inject ISkillService SkillService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Add Goal - A Better Me</PageTitle>

<div class="max-w-3xl mx-auto">
    <!-- Header -->
    <header class="mb-8 flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-text-main dark:text-white">Add New Goal</h1>
            <p class="text-text-secondary dark:text-gray-400 mt-2">Set a new objective for @(skillName ?? "your skill")</p>
        </div>
        <a href="/skills/@SkillId" class="px-4 py-2 text-text-secondary hover:text-text-main dark:text-gray-400 dark:hover:text-white font-medium transition-colors">
            Cancel
        </a>
    </header>
    
    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary"></div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg text-red-600 dark:text-red-400">
            @errorMessage
        </div>
        <div class="flex justify-center">
             <a href="/skills/@SkillId" class="px-6 py-3 bg-primary hover:bg-primary-dark text-text-main font-bold rounded-lg transition-colors">
                Back to Skill
            </a>
        </div>
    }
    else
    {
        <div class="bg-surface-light dark:bg-surface-dark rounded-2xl border border-gray-100 dark:border-gray-800 p-6 md:p-8">
            <EditForm Model="@goalModel" OnValidSubmit="CreateGoal">
                <DataAnnotationsValidator />
                
                <div class="space-y-6">
                    <!-- Title -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Goal Title <span class="text-red-500">*</span></label>
                        <InputText @bind-Value="goalModel.Title" 
                               class="w-full h-12 px-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white focus:ring-2 focus:ring-primary/50" 
                               placeholder="e.g., Complete Chapter 1" />
                        <ValidationMessage For="@(() => goalModel.Title)" class="text-red-500 text-sm mt-1" />
                    </div>
                    
                    <!-- Description -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Description</label>
                        <InputTextArea @bind-Value="goalModel.Description" rows="3"
                                  class="w-full px-4 py-3 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white resize-none focus:ring-2 focus:ring-primary/50" 
                                  placeholder="Describe what you want to achieve..." />
                    </div>
                    
                     <!-- Target Date -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Target Date</label>
                        <InputDate @bind-Value="goalModel.TargetDate" 
                               class="w-full h-12 px-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white" />
                    </div>
                    
                    <!-- Target Hours -->
                    <div>
                        <label class="block text-sm font-semibold text-text-main dark:text-white mb-2">Target Hours</label>
                         <InputNumber @bind-Value="goalModel.TargetHours" 
                               class="w-full h-12 px-4 bg-background-light dark:bg-background-dark border border-gray-200 dark:border-gray-700 rounded-lg text-text-main dark:text-white" />
                         <p class="text-xs text-text-secondary dark:text-gray-500 mt-1">Estimated hours to complete this goal.</p>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-6 border-t border-gray-100 dark:border-gray-800 flex justify-end">
                        <button type="submit" disabled="@isSubmitting" 
                                class="flex items-center gap-2 px-8 h-11 bg-primary hover:bg-primary-dark text-text-main font-bold rounded-lg transition-all disabled:opacity-50">
                            @if (isSubmitting)
                            {
                                <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-text-main"></div>
                                <span>Creating...</span>
                            }
                            else
                            {
                                <span class="material-symbols-outlined">add</span>
                                <span>Create Goal</span>
                            }
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter] public int SkillId { get; set; }
    
    private CreateGoalModel goalModel = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? skillName;
    private int userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userIdClaim = authState.User.FindFirst("userId")?.Value;
        
        if (int.TryParse(userIdClaim, out int uid))
        {
            userId = uid;
            await CheckSkillAccess();
        }
        else
        {
            errorMessage = "User not authenticated.";
            isLoading = false;
        }
    }

    private async Task CheckSkillAccess()
    {
        try 
        {
            // Verify skill exists and belongs to user
            var skill = await SkillService.GetSkillByIdAsync(SkillId, userId);
            if (skill == null)
            {
                errorMessage = "Skill not found or you don't have permission to modify it.";
            }
            else
            {
                skillName = skill.Name;
                goalModel.TargetDate = DateTime.Today.AddDays(7);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error validating skill: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateGoal()
    {
        if (isSubmitting) return;
        isSubmitting = true;
        
        try
        {
            var request = new CreateGoalRequest
            {
                Title = goalModel.Title,
                Description = goalModel.Description,
                TargetDate = goalModel.TargetDate,
                TargetHours = goalModel.TargetHours,
                Status = "pending",
                Milestones = new List<CreateMilestoneRequest>() // Milestones can be added later in Edit
            };

            var result = await GoalService.CreateGoalAsync(SkillId, userId, request);
            
            if (result != null)
            {
                Navigation.NavigateTo($"/skills/{SkillId}");
            }
            else
            {
                errorMessage = "Failed to create goal.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating goal: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class CreateGoalModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Title is required")]
        public string Title { get; set; } = "";
        
        public string? Description { get; set; }
        public DateTime? TargetDate { get; set; }
        public decimal? TargetHours { get; set; }
    }
}
