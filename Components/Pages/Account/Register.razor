@code {
    private Toast? toast;
    
    private string firstName = "";
    private string lastName = "";
    private string email = "";
    private string password = "";
    private string confirmPassword = "";
    private bool acceptTerms = false;
    
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;
    private bool showValidation = false;

    private async Task HandleRegister()
    {
        errorMessage = null;
        successMessage = null;
        showValidation = true;
        StateHasChanged();
        
        // Validate
        if (string.IsNullOrWhiteSpace(firstName) || 
            string.IsNullOrWhiteSpace(lastName) || 
            string.IsNullOrWhiteSpace(email) || 
            string.IsNullOrWhiteSpace(password) ||
            password.Length < 8 ||
            password != confirmPassword ||
            !acceptTerms)
        {
            toast?.Show("Validation Error", "Please fill in all required fields correctly.", Toast.ToastType.Error);
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Call the AuthService directly (server-side)
            var result = await AuthService.RegisterAsync(new CSE325FinalProject.Models.DTOs.RegisterRequest
            {
                FirstName = firstName,
                LastName = lastName,
                Email = email,
                Password = password,
                ConfirmPassword = confirmPassword
            });
            
            if (result.Success)
            {
                successMessage = "Account created successfully!";
                toast?.Show("Success!", "Account created successfully! Redirecting to login...", Toast.ToastType.Success);
                StateHasChanged();
                await Task.Delay(2000);
                Navigation.NavigateTo("/login?registered=true", forceLoad: true);
            }
            else
            {
                errorMessage = result.Message ?? "Registration failed. Please try again.";
                toast?.Show("Registration Failed", errorMessage, Toast.ToastType.Error, 5000);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            toast?.Show("Error", ex.Message, Toast.ToastType.Error, 5000);
            Console.WriteLine($"Register error: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private int GetPasswordStrength()
    {
        var pwd = password ?? "";
        int strength = 0;
        
        if (pwd.Length >= 8) strength++;
        if (System.Text.RegularExpressions.Regex.IsMatch(pwd, "[a-z]") && 
            System.Text.RegularExpressions.Regex.IsMatch(pwd, "[A-Z]")) strength++;
        if (System.Text.RegularExpressions.Regex.IsMatch(pwd, @"\d")) strength++;
        if (System.Text.RegularExpressions.Regex.IsMatch(pwd, @"[^a-zA-Z\d]")) strength++;
        
        return strength;
    }

    private string GetStrengthColor(int strength) => strength switch
    {
        1 => "bg-red-500",
        2 => "bg-orange-500",
        3 => "bg-yellow-500",
        4 => "bg-green-500",
        _ => "bg-gray-200"
    };

    private string GetPasswordHint()
    {
        var pwd = password ?? "";
        if (string.IsNullOrEmpty(pwd)) return "Use at least 8 characters with letters and numbers";
        var strength = GetPasswordStrength();
        return strength switch
        {
            1 => "Weak",
            2 => "Fair",
            3 => "Good",
            4 => "Strong",
            _ => "Too short"
        };
    }

    private bool PasswordsMatch()
    {
        return !string.IsNullOrEmpty(confirmPassword) && password == confirmPassword;
    }
}
