@page "/account/register"
@page "/register"
@layout LoginLayout
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject IAuthService AuthService

<PageTitle>Create Account - SkillTracker</PageTitle>

<!-- Toast Notification -->
<Toast @ref="toast" />

<div class="relative z-10 w-full max-w-[520px] bg-white dark:bg-surface-dark rounded-2xl shadow-soft p-8 md:p-12 overflow-hidden border border-[#e8efef] dark:border-[#2a4a47]">
    <!-- Logo -->
    <div class="flex justify-center mb-6">
        <div class="h-14 w-14 bg-primary/20 rounded-xl flex items-center justify-center text-primary-dark dark:text-primary shadow-lg shadow-primary/20">
            <span class="material-symbols-outlined text-[36px]">folder_managed</span>
        </div>
    </div>
    
    <!-- Header -->
    <div class="text-center mb-2">
        <h1 class="text-[#1b3230] dark:text-white tracking-tight text-3xl font-bold leading-tight">Create your account</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-2">Start tracking your skills and achievements</p>
    </div>
    

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="mt-4 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg text-red-600 dark:text-red-400 text-sm text-center">
            @errorMessage
        </div>
    }
    
    <!-- Success Message -->
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="mt-4 p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg text-green-600 dark:text-green-400 text-sm text-center">
            @successMessage
        </div>
    }
    
    <!-- Form - Using button onclick instead of form submit -->
    <div class="space-y-4 mt-6">
        <div class="grid grid-cols-2 gap-4">
            <div class="block">
                <span class="block text-[#1b3230] dark:text-[#e0eaea] text-sm font-semibold mb-2 ml-1">First Name</span>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="material-symbols-outlined text-gray-400 text-[20px]">person</span>
                    </div>
                    <input @bind="firstName" @bind:event="oninput" type="text"
                        class="w-full bg-white dark:bg-[#1b3230] border border-[#dce5e4] dark:border-[#385f5b] rounded-lg pl-10 pr-4 py-3 text-[#1b3230] dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary" 
                        placeholder="John" />
                </div>
                @if (showValidation && string.IsNullOrWhiteSpace(firstName))
                {
                    <span class="text-red-500 text-xs mt-1 block">First name is required</span>
                }
            </div>
            
            <div class="block">
                <span class="block text-[#1b3230] dark:text-[#e0eaea] text-sm font-semibold mb-2 ml-1">Last Name</span>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="material-symbols-outlined text-gray-400 text-[20px]">badge</span>
                    </div>
                    <input @bind="lastName" @bind:event="oninput" type="text"
                        class="w-full bg-white dark:bg-[#1b3230] border border-[#dce5e4] dark:border-[#385f5b] rounded-lg pl-10 pr-4 py-3 text-[#1b3230] dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary" 
                        placeholder="Doe" />
                </div>
                @if (showValidation && string.IsNullOrWhiteSpace(lastName))
                {
                    <span class="text-red-500 text-xs mt-1 block">Last name is required</span>
                }
            </div>
        </div>
        
        <div class="block">
            <span class="block text-[#1b3230] dark:text-[#e0eaea] text-sm font-semibold mb-2 ml-1">Email Address</span>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-symbols-outlined text-gray-400 text-[20px]">mail</span>
                </div>
                <input @bind="email" @bind:event="oninput" type="email"
                    class="w-full bg-white dark:bg-[#1b3230] border border-[#dce5e4] dark:border-[#385f5b] rounded-lg pl-10 pr-4 py-3 text-[#1b3230] dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary" 
                    placeholder="name@example.com" />
            </div>
            @if (showValidation && string.IsNullOrWhiteSpace(email))
            {
                <span class="text-red-500 text-xs mt-1 block">Email is required</span>
            }
        </div>
        
        <div class="block">
            <span class="block text-[#1b3230] dark:text-[#e0eaea] text-sm font-semibold mb-2 ml-1">Password</span>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-symbols-outlined text-gray-400 text-[20px]">lock</span>
                </div>
                <input @bind="password" @bind:event="oninput" type="password"
                    class="w-full bg-white dark:bg-[#1b3230] border border-[#dce5e4] dark:border-[#385f5b] rounded-lg pl-10 pr-4 py-3 text-[#1b3230] dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary" 
                    placeholder="At least 8 characters" />
            </div>
            @if (showValidation && string.IsNullOrWhiteSpace(password))
            {
                <span class="text-red-500 text-xs mt-1 block">Password is required</span>
            }
            else if (showValidation && password.Length < 8)
            {
                <span class="text-red-500 text-xs mt-1 block">Password must be at least 8 characters</span>
            }
            <!-- Password strength indicator -->
            <div class="mt-2 flex gap-1">
                @for (int i = 0; i < 4; i++)
                {
                    var strength = GetPasswordStrength();
                    <div class="h-1 flex-1 rounded-full @(i < strength ? GetStrengthColor(strength) : "bg-gray-200 dark:bg-gray-700")"></div>
                }
            </div>
            <p class="text-xs text-gray-400 mt-1 ml-1">@GetPasswordHint()</p>
        </div>
        
        <div class="block">
            <span class="block text-[#1b3230] dark:text-[#e0eaea] text-sm font-semibold mb-2 ml-1">Confirm Password</span>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-symbols-outlined text-gray-400 text-[20px]">lock_open</span>
                </div>
                <input @bind="confirmPassword" @bind:event="oninput" type="password"
                    class="w-full bg-white dark:bg-[#1b3230] border border-[#dce5e4] dark:border-[#385f5b] rounded-lg pl-10 pr-4 py-3 text-[#1b3230] dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary" 
                    placeholder="Repeat your password" />
                @if (PasswordsMatch())
                {
                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                        <span class="material-symbols-outlined text-green-500 text-[20px]">check_circle</span>
                    </div>
                }
            </div>
            @if (showValidation && password != confirmPassword)
            {
                <span class="text-red-500 text-xs mt-1 block">Passwords do not match</span>
            }
        </div>

        <div class="flex items-start gap-2 mt-4">
            <input @bind="acceptTerms" type="checkbox" class="w-4 h-4 mt-0.5 text-primary rounded focus:ring-primary" />
            <label class="text-sm text-gray-600 dark:text-gray-400">
                I agree to the <a href="#" class="text-primary hover:underline">Terms of Service</a> and <a href="#" class="text-primary hover:underline">Privacy Policy</a>
            </label>
        </div>
        @if (showValidation && !acceptTerms)
        {
            <span class="text-red-500 text-xs block">You must accept the terms</span>
        }
        
        <button type="button" @onclick="HandleRegister" disabled="@isLoading" 
            class="w-full bg-primary hover:bg-primary-dark text-[#1b3230] dark:text-[#0f1f1d] font-bold rounded-lg h-12 mt-4 transition-all duration-200 flex items-center justify-center gap-2 shadow-lg shadow-primary/25 disabled:opacity-50 disabled:cursor-not-allowed">
            @if (isLoading)
            {
                <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span>Creating account...</span>
            }
            else
            {
                <span>Create Account</span>
                <span class="material-symbols-outlined text-[20px]">arrow_forward</span>
            }
        </button>
    </div>

    <!-- Sign In Link -->
    <p class="text-center mt-6 text-gray-500 dark:text-gray-400 text-sm">
        Already have an account? <a href="/login" class="text-primary font-semibold hover:underline">Sign in</a>
    </p>
</div>

