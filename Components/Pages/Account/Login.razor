@page "/account/login"
@page "/login"
@layout LoginLayout
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject IAuthService AuthService
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Login - SkillTracker</PageTitle>

<!-- Toast Notification -->
<Toast @ref="toast" />

<div class="relative z-10 w-full max-w-[480px] bg-white dark:bg-surface-dark rounded-2xl shadow-soft p-8 md:p-12 overflow-hidden border border-[#e8efef] dark:border-[#2a4a47]">
    <!-- Logo -->
    <div class="flex justify-center mb-8">
        <div class="h-14 w-14 bg-primary/20 rounded-xl flex items-center justify-center text-primary-dark dark:text-primary shadow-lg shadow-primary/20">
            <span class="material-symbols-outlined text-[36px]">folder_managed</span>
        </div>
    </div>
    
    <!-- Header -->
    <div class="text-center mb-2">
        <h1 class="text-[#1b3230] dark:text-white tracking-tight text-3xl font-bold leading-tight">Welcome back</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-2">Sign in to continue tracking your skills</p>
    </div>
    
    <!-- Success Message from Registration -->
    @if (showRegisteredMessage)
    {
        <div class="mt-4 p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg text-green-600 dark:text-green-400 text-sm text-center">
            Account created successfully! Please log in.
        </div>
    }
    

    
    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="mt-4 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg text-red-600 dark:text-red-400 text-sm text-center">
            @errorMessage
        </div>
    }
    
    <!-- Form - Using button onclick instead of form submit -->
    <div class="space-y-4 mt-8">
        <div class="block">
            <span class="block text-[#1b3230] dark:text-[#e0eaea] text-sm font-semibold mb-2 ml-1">Email Address</span>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-symbols-outlined text-gray-400 text-[20px]">mail</span>
                </div>
                <input @bind="email" @bind:event="oninput" type="email" 
                    class="w-full bg-white dark:bg-[#1b3230] border border-[#dce5e4] dark:border-[#385f5b] rounded-lg pl-10 pr-4 py-3 text-[#1b3230] dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary" 
                    placeholder="name@example.com" />
            </div>
            @if (showValidation && string.IsNullOrWhiteSpace(email))
            {
                <span class="text-red-500 text-xs mt-1 block">Email is required</span>
            }
        </div>
        
        <div class="block">
            <span class="block text-[#1b3230] dark:text-[#e0eaea] text-sm font-semibold mb-2 ml-1">Password</span>
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="material-symbols-outlined text-gray-400 text-[20px]">lock</span>
                </div>
                <input @bind="password" @bind:event="oninput" type="password"
                    class="w-full bg-white dark:bg-[#1b3230] border border-[#dce5e4] dark:border-[#385f5b] rounded-lg pl-10 pr-4 py-3 text-[#1b3230] dark:text-white focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary" 
                    placeholder="••••••••" />
            </div>
            @if (showValidation && string.IsNullOrWhiteSpace(password))
            {
                <span class="text-red-500 text-xs mt-1 block">Password is required</span>
            }
        </div>

        <div class="flex items-center justify-between">
            <label class="flex items-center gap-2 cursor-pointer">
                <input @bind="rememberMe" type="checkbox" class="w-4 h-4 text-primary rounded focus:ring-primary" />
                <span class="text-sm text-gray-600 dark:text-gray-400">Remember me</span>
            </label>
            <a href="#" class="text-sm text-primary hover:underline font-medium">Forgot password?</a>
        </div>
        
        <button type="button" @onclick="HandleLogin" disabled="@isLoading" 
            class="w-full bg-primary hover:bg-primary-dark text-[#1b3230] dark:text-[#0f1f1d] font-bold rounded-lg h-12 mt-6 transition-all duration-200 flex items-center justify-center gap-2 shadow-lg shadow-primary/25 disabled:opacity-50 disabled:cursor-not-allowed">
            @if (isLoading)
            {
                <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span>Signing in...</span>
            }
            else
            {
                <span>Log In</span>
                <span class="material-symbols-outlined text-[20px]">arrow_forward</span>
            }
        </button>
    </div>

    <!-- Divider -->
    <div class="flex items-center my-6">
        <div class="flex-1 border-t border-gray-200 dark:border-gray-700"></div>
        <span class="px-4 text-sm text-gray-400">or continue with</span>
        <div class="flex-1 border-t border-gray-200 dark:border-gray-700"></div>
    </div>

    <!-- Social Login -->
    <div class="flex gap-3">
        <button disabled class="flex-1 flex items-center justify-center gap-2 py-3 border border-gray-200 dark:border-gray-700 rounded-lg opacity-50 cursor-not-allowed">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span class="text-sm font-medium text-gray-600 dark:text-gray-300">Google</span>
        </button>
        <a href="api/auth/github/login" class="flex-1 flex items-center justify-center gap-2 py-3 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition py-3">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span class="text-sm font-medium text-gray-600 dark:text-gray-300">GitHub</span>
        </a>
    </div>
    <!-- <p class="text-center text-xs text-gray-400 mt-2">Coming soon</p> -->

    <!-- Sign Up Link -->
    <p class="text-center mt-8 text-gray-500 dark:text-gray-400 text-sm">
        Don't have an account? <a href="/account/register" class="text-primary font-semibold hover:underline">Sign up</a>
    </p>
</div>

<!-- Footer -->
<p class="mt-8 text-gray-400 text-sm">© 2026 SkillTracker. All rights reserved.</p>

@code {
    private Toast? toast;
    
    private string email = "";
    private string password = "";
    private bool rememberMe = false;
    
    private string? errorMessage;
    private bool isLoading;
    private bool showValidation = false;
    private bool showRegisteredMessage = false;

    protected override void OnInitialized()
    {
        // Check for registered query parameter
        var uri = new Uri(Navigation.Uri);
        showRegisteredMessage = uri.Query.Contains("registered=true");
    }

    private async Task HandleLogin()
    {
        errorMessage = null;
        showValidation = true;
        StateHasChanged();
        
        // Validate
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            toast?.Show("Validation Error", "Please enter your email and password.", Toast.ToastType.Error);
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Get IP and User Agent
            var httpContext = HttpContextAccessor.HttpContext;
            var ipAddress = httpContext?.Connection?.RemoteIpAddress?.ToString() ?? "Unknown";
            var userAgent = httpContext?.Request.Headers["User-Agent"].FirstOrDefault() ?? "Unknown";
            
            // Call the AuthService directly (server-side)
            var result = await AuthService.LoginAsync(new CSE325FinalProject.Models.DTOs.LoginRequest
            {
                Email = email,
                Password = password
            }, ipAddress, userAgent);
            
            if (result.Success)
            {
                // Set cookie via JS since we need it on the client
                await JS.InvokeVoidAsync("eval", $@"
                    document.cookie = 'refreshToken={result.RefreshToken}; path=/; max-age={60 * 60 * 24 * 7}; samesite=strict';
                ");
                
                toast?.Show("Welcome Back!", "Login successful! Redirecting...", Toast.ToastType.Success);
                StateHasChanged();
                await Task.Delay(1000);
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = result.Message ?? "Login failed. Please check your credentials.";
                toast?.Show("Login Failed", errorMessage, Toast.ToastType.Error, 5000);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            toast?.Show("Error", ex.Message, Toast.ToastType.Error, 5000);
            Console.WriteLine($"Login error: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
