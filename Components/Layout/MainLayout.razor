@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthService AuthService

<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    <aside class="w-64 bg-surface-light dark:bg-surface-dark border-r border-gray-100 dark:border-gray-800 flex flex-col justify-between h-full shrink-0 transition-all duration-300 z-20 hidden md:flex">
        <div>
            <div class="p-6 pb-8">
                <a href="/" class="flex items-center gap-3 cursor-pointer group">
                    <img src="images/Logo-better-me.png" alt="A Better Me Logo" class="h-10 w-auto object-contain group-hover:scale-105 transition-transform" />
                    <span class="font-brand text-2xl text-gray-700 dark:text-gray-200">
                        A better <span class="text-primary">me</span>
                    </span>
                </a>
            </div>
            <nav class="flex flex-col gap-2 px-4">
                <NavLink href="/" Match="NavLinkMatch.All"
                   class="flex items-center gap-3 px-3 py-3 rounded-lg transition-colors group text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white"
                   ActiveClass="bg-primary/10 !text-primary-dark dark:!text-primary font-bold">
                    <span class="material-symbols-outlined group-hover:scale-110 transition-transform">dashboard</span>
                    <span class="text-sm font-medium">Dashboard</span>
                </NavLink>
                <NavLink href="/skills" Match="NavLinkMatch.Prefix"
                   class="flex items-center gap-3 px-3 py-3 rounded-lg transition-colors group text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white"
                   ActiveClass="bg-primary/10 !text-primary-dark dark:!text-primary font-bold">
                    <span class="material-symbols-outlined group-hover:scale-110 transition-transform">folder_open</span>
                    <span class="text-sm font-medium">My Skills</span>
                </NavLink>
                <NavLink href="/sharing"
                   class="flex items-center gap-3 px-3 py-3 rounded-lg transition-colors group text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white"
                   ActiveClass="bg-primary/10 !text-primary-dark dark:!text-primary font-bold">
                    <span class="material-symbols-outlined group-hover:scale-110 transition-transform">share</span>
                    <span class="text-sm font-medium">Sharing Center</span>
                </NavLink>
                <NavLink href="/reports"
                   class="flex items-center gap-3 px-3 py-3 rounded-lg transition-colors group text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white"
                   ActiveClass="bg-primary/10 !text-primary-dark dark:!text-primary font-bold">
                    <span class="material-symbols-outlined group-hover:scale-110 transition-transform">analytics</span>
                    <span class="text-sm font-medium">Reports</span>
                </NavLink>
            </nav>
        </div>
        <div class="p-4 border-t border-gray-100 dark:border-gray-800">
            <AuthorizeView>
                <Authorized>
                    <a href="/profile" class="flex items-center gap-3 px-3 py-3 rounded-lg text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white transition-colors mb-2 bg-gray-50 dark:bg-gray-800/50">
                        @if (!string.IsNullOrEmpty(GetClaimValue(context.User, "avatarUrl")))
                        {
                            <img src="@GetClaimValue(context.User, "avatarUrl")" alt="Profile" class="w-8 h-8 rounded-full object-cover" />
                        }
                        else
                        {
                            <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center text-primary-dark dark:text-primary text-xs font-bold">
                                @GetClaimValue(context.User, "initials")
                            </div>
                        }
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-text-main dark:text-white truncate">@context.User.Identity?.Name</p>
                            <p class="text-xs text-text-secondary dark:text-gray-500 truncate">@GetClaimValue(context.User, System.Security.Claims.ClaimTypes.Email)</p>
                        </div>
                    </a>
                </Authorized>
            </AuthorizeView>
            <a href="/settings" class="flex items-center gap-3 px-3 py-3 rounded-lg text-text-secondary dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:text-text-main dark:hover:text-white transition-colors">
                <span class="material-symbols-outlined">settings</span>
                <span class="text-sm font-medium">Settings</span>
            </a>
            <button @onclick="Logout" class="w-full flex items-center gap-3 px-3 py-3 mt-1 rounded-lg text-red-500 hover:bg-red-50 dark:hover:bg-red-900/10 transition-colors">
                <span class="material-symbols-outlined">logout</span>
                <span class="text-sm font-medium">Logout</span>
            </button>
        </div>
    </aside>
    
    <!-- Mobile Header -->
    <div class="md:hidden fixed top-0 left-0 right-0 z-30 bg-surface-light dark:bg-surface-dark border-b border-gray-100 dark:border-gray-800 px-4 py-3">
        <div class="flex items-center justify-between">
            <a href="/" class="flex items-center gap-2">
                <img src="images/Logo-better-me.png" alt="A Better Me Logo" class="h-8 w-auto object-contain" />
                <span class="font-brand text-2xl text-gray-700 dark:text-gray-200">
                    A better <span class="text-primary">me</span>
                </span>
            </a>
            <button @onclick="ToggleMobileMenu" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800">
                <span class="material-symbols-outlined text-text-main dark:text-white">menu</span>
            </button>
        </div>
    </div>
    
    <!-- Main Content -->
    <main class="flex-1 flex flex-col h-full overflow-hidden relative">
        <div class="flex-1 overflow-y-auto p-4 md:p-8 lg:p-12 scroll-smooth pt-16 md:pt-4">
            @Body
        </div>
    </main>
</div>

<!-- Theme Toggle Button (Fixed Bottom Right) -->
<button onclick="toggleTheme()" class="fixed bottom-4 right-4 z-50 p-3 rounded-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-all hover:scale-110 group" title="Toggle theme">
    <span class="material-symbols-outlined text-orange-500 dark:hidden group-hover:rotate-12 transition-transform">light_mode</span>
    <span class="material-symbols-outlined text-indigo-400 hidden dark:block group-hover:rotate-12 transition-transform">dark_mode</span>
</button>

@code {
    private bool showMobileMenu = false;

    private void ToggleMobileMenu()
    {
        showMobileMenu = !showMobileMenu;
    }

    private async Task Logout()
    {
        // Note: In a real implementation, you'd want to clear the cookie server-side
        Navigation.NavigateTo("/account/logout", forceLoad: true);
    }

    private string GetClaimValue(System.Security.Claims.ClaimsPrincipal user, string claimType)
    {
        return user.FindFirst(claimType)?.Value ?? "";
    }
}
